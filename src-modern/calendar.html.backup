                                            <span class="event-badge" style="background: #6366f1;"></span>
                                            Events
                                        </label>
                                        <label class="legend-item">
                                            <input type="checkbox" x-model="visibleTypes" value="meeting" class="me-2">
                                            <span class="event-badge" style="background: #10b981;"></span>
                                            Meetings
                                        </label>
                                        <label class="legend-item">
                                            <input type="checkbox" x-model="visibleTypes" value="task" class="me-2">
                                            <span class="event-badge" style="background: #f59e0b;"></span>
                                            Tasks
                                        </label>
                                        <label class="legend-item">
                                            <input type="checkbox" x-model="visibleTypes" value="reminder" class="me-2">
                                            <span class="event-badge" style="background: #8b5cf6;"></span>
                                            Reminders
                                        </label>
                                        <label class="legend-item">
                                            <input type="checkbox" x-model="visibleTypes" value="deadline" class="me-2">
                                            <span class="event-badge" style="background: #ef4444;"></span>
                                            Deadlines
                                        </label>
                                    </div>
                                </div>

                                <!-- Upcoming Events -->
                                <div>
                                    <h6 class="fw-bold mb-3">Upcoming Events</h6>
                                    <div class="upcoming-events">
                                        <template x-for="event in upcomingEvents" :key="event.id">
                                            <div class="event-item" @click="viewEvent(event)">
                                                <div class="event-time" x-text="event.timeStr"></div>
                                                <div class="event-title" x-text="event.title"></div>
                                                <div class="small text-muted" x-text="event.description"></div>
                                            </div>
                                        </template>
                                    </div>
                                </div>
                            </div>

                            <!-- Calendar Main -->
                            <div class="col-lg-9 calendar-main">
                                
                                <!-- Calendar Navigation -->
                                <div class="calendar-nav">
                                    <div class="d-flex align-items-center gap-3">
                                        <button class="btn btn-outline-secondary" @click="previousPeriod()">
                                            <i class="bi bi-chevron-left"></i>
                                        </button>
                                        <h4 class="mb-0" x-text="currentPeriodTitle"></h4>
                                        <button class="btn btn-outline-secondary" @click="nextPeriod()">
                                            <i class="bi bi-chevron-right"></i>
                                        </button>
                                        <button class="btn btn-outline-primary" @click="goToToday()">Today</button>
                                    </div>
                                    
                                    <div class="view-switcher">
                                        <button class="view-btn" :class="{ 'active': currentView === 'month' }" @click="switchView('month')">Month</button>
                                        <button class="view-btn" :class="{ 'active': currentView === 'week' }" @click="switchView('week')">Week</button>
                                        <button class="view-btn" :class="{ 'active': currentView === 'day' }" @click="switchView('day')">Day</button>
                                    </div>
                                </div>

                                <!-- Calendar Grid -->
                                <div x-show="currentView === 'month'">
                                    <div class="calendar-header">
                                        <div class="calendar-header-day">Sun</div>
                                        <div class="calendar-header-day">Mon</div>
                                        <div class="calendar-header-day">Tue</div>
                                        <div class="calendar-header-day">Wed</div>
                                        <div class="calendar-header-day">Thu</div>
                                        <div class="calendar-header-day">Fri</div>
                                        <div class="calendar-header-day">Sat</div>
                                    </div>
                                    <div class="calendar-grid">
                                        <template x-for="day in calendarDays" :key="day.date">
                                            <div class="calendar-day" 
                                                 :class="{ 
                                                     'today': day.isToday, 
                                                     'other-month': day.isOtherMonth,
                                                     'selected': day.isSelected
                                                 }"
                                                 @click="selectDay(day)">
                                                <div class="day-number" x-text="day.day"></div>
                                                <template x-for="event in day.events" :key="event.id">
                                                    <div class="event" 
                                                         :class="event.type"
                                                         @click.stop="viewEvent(event)"
                                                         x-text="event.title"></div>
                                                </template>
                                            </div>
                                        </template>
                                    </div>
                                </div>

                                <!-- Week View -->
                                <div x-show="currentView === 'week'">
                                    <div class="row">
                                        <div class="col-12">
                                            <div class="table-responsive">
                                                <table class="table table-bordered">
                                                    <thead>
                                                        <tr>
                                                            <th style="width: 80px;">Time</th>
                                                            <template x-for="day in weekDays" :key="day.date">
                                                                <th class="text-center">
                                                                    <div x-text="day.dayName"></div>
                                                                    <small x-text="day.dayNumber"></small>
                                                                </th>
                                                            </template>
                                                        </tr>
                                                    </thead>
                                                    <tbody>
                                                        <template x-for="hour in hours" :key="hour">
                                                            <tr>
                                                                <td class="text-center text-muted small" x-text="hour"></td>
                                                                <template x-for="day in weekDays" :key="`${day.date}-${hour}`">
                                                                    <td class="position-relative" style="height: 60px; cursor: pointer;" @click="addEventAtTime(day.date, hour)">
                                                                        <template x-for="event in getEventsForDate(day.date)" :key="event.id">
                                                                            <div x-show="eventMatchesHour(event, hour)"
                                                                                 class="position-absolute w-100 px-1" 
                                                                                 style="top: 2px; left: 2px; right: 2px;">
                                                                                <div class="badge w-100 text-start" 
                                                                                     :class="getBadgeClass(event.type)"
                                                                                     @click.stop="viewEvent(event)"
                                                                                     x-text="event.title"></div>
                                                                            </div>
                                                                        </template>
                                                                    </td>
                                                                </template>
                                                            </tr>
                                                        </template>
                                                    </tbody>
                                                </table>
                                            </div>
                                        </div>
                                    </div>
                                </div>

                                <!-- Day View -->
                                <div x-show="currentView === 'day'">
                                    <div class="row">
                                        <div class="col-12">
                                            <div class="card">
                                                <div class="card-header bg-primary text-white text-center">
                                                    <h5 class="mb-0" x-text="selectedDayTitle"></h5>
                                                    <small x-text="selectedDayDate"></small>
                                                </div>
                                                <div class="card-body p-0">
                                                    <div class="table-responsive">
                                                        <table class="table table-bordered mb-0">
                                                            <tbody>
                                                                <template x-for="hour in hours" :key="hour">
                                                                    <tr>
                                                                        <td class="text-center text-muted small" style="width: 80px;" x-text="hour"></td>
                                                                        <td class="position-relative" style="height: 60px; cursor: pointer;" @click="addEventAtTime(selectedDay, hour)">
                                                                            <template x-for="event in getEventsForDate(selectedDay)" :key="event.id">
                                                                                <div x-show="eventMatchesHour(event, hour)"
                                                                                     class="position-absolute w-100 px-2" 
                                                                                     style="top: 4px; left: 4px; right: 4px;">
                                                                                    <div class="alert mb-0 py-1" 
                                                                                         :class="getAlertClass(event.type)"
                                                                                         @click.stop="viewEvent(event)">
                                                                                        <strong x-text="event.time"></strong> - <span x-text="event.title"></span>
                                                                                    </div>
                                                                                </div>
                                                                            </template>
                                                                            <!-- Current time indicator -->
                                                                            <div x-show="isCurrentHour(hour) && isToday(selectedDay)" 
                                                                                 class="position-absolute bg-danger" 
                                                                                 style="left: 0; right: 0; height: 2px; top: 50%; z-index: 10;"></div>
                                                                        </td>
                                                                    </tr>
                                                                </template>
                                                            </tbody>
                                                        </table>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>

                        </div>
                    </div>

                </div>
            </main>

            <!-- Add Event Modal -->
            <div class="modal fade" id="addEventModal" tabindex="-1" aria-labelledby="addEventModalLabel" aria-hidden="true">
                <div class="modal-dialog">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h5 class="modal-title" id="addEventModalLabel">Add New Event</h5>
                            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                        </div>
                        <div class="modal-body" x-data="addEventModal" x-init="init()">
                            <form @submit.prevent="submitEvent()">
                                <div class="mb-3">
                                    <label for="eventTitle" class="form-label">Event Title *</label>
                                    <input type="text" class="form-control" id="eventTitle" x-model="eventData.title" required>
                                </div>
                                
                                <div class="mb-3">
                                    <label for="eventType" class="form-label">Event Type</label>
                                    <select class="form-select" id="eventType" x-model="eventData.type">
                                        <option value="event">Event</option>
                                        <option value="meeting">Meeting</option>
                                        <option value="task">Task</option>
                                        <option value="reminder">Reminder</option>
                                        <option value="deadline">Deadline</option>
                                    </select>
                                </div>
                                
                                <div class="row">
                                    <div class="col-md-6">
                                        <div class="mb-3">
                                            <label for="eventDate" class="form-label">Date *</label>
                                            <input type="date" class="form-control" id="eventDate" x-model="eventData.date" required>
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="mb-3">
                                            <label for="eventTime" class="form-label">Time *</label>
                                            <input type="time" class="form-control" id="eventTime" x-model="eventData.time" required>
                                        </div>
                                    </div>
                                </div>
                                
                                <div class="mb-3">
                                    <label for="eventDescription" class="form-label">Description</label>
                                    <textarea class="form-control" id="eventDescription" rows="3" x-model="eventData.description" placeholder="Enter event description..."></textarea>
                                </div>
                                
                                <div class="mb-3">
                                    <label for="eventDuration" class="form-label">Duration</label>
                                    <select class="form-select" id="eventDuration" x-model="eventData.duration">
                                        <option value="30">30 minutes</option>
                                        <option value="60" selected>1 hour</option>
                                        <option value="90">1.5 hours</option>
                                        <option value="120">2 hours</option>
                                        <option value="180">3 hours</option>
                                        <option value="240">4 hours</option>
                                        <option value="480">All day</option>
                                    </select>
                                </div>
                                
                                <div class="mb-3">
                                    <div class="form-check">
                                        <input class="form-check-input" type="checkbox" id="eventRecurring" x-model="eventData.recurring">
                                        <label class="form-check-label" for="eventRecurring">
                                            Recurring event
                                        </label>
                                    </div>
                                </div>
                                
                                <div x-show="eventData.recurring" class="mb-3">
                                    <label for="eventRecurrence" class="form-label">Repeat</label>
                                    <select class="form-select" id="eventRecurrence" x-model="eventData.recurrence">
                                        <option value="daily">Daily</option>
                                        <option value="weekly">Weekly</option>
                                        <option value="monthly">Monthly</option>
                                        <option value="yearly">Yearly</option>
                                    </select>
                                </div>
                            </form>
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                            <button type="button" class="btn btn-primary" @click="submitEvent()">Save Event</button>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Floating Add Event Button -->
            <button class="add-event-btn" @click="addEvent()" title="Add Event">
                <i class="bi bi-plus-lg fs-4"></i>
            </button>

            <!-- Footer -->
            <footer class="admin-footer">
                <div class="container-fluid">
                    <div class="row">
                        <div class="col-md-6">
                            <p class="mb-0 text-muted">© 2025 Modern Bootstrap Admin Template</p>
                        </div>
                        <div class="col-md-6 text-md-end">
                            <p class="mb-0 text-muted">Built with Bootstrap 5.3.7</p>
                        </div>
                    </div>
                </div>
            </footer>

        </div> <!-- /.admin-wrapper -->
    </div>

    <!-- Page-specific Component -->
    <script type="module" src="./scripts/components/calendar.js"></script>

    <!-- Main App Script -->
    <script type="module" src="./scripts/main.js"></script>

    <script>
      document.addEventListener('DOMContentLoaded', () => {
        const toggleButton = document.querySelector('[data-sidebar-toggle]');
        const wrapper = document.getElementById('admin-wrapper');

        if (toggleButton && wrapper) {
          const isCollapsed = localStorage.getItem('sidebar-collapsed') === 'true';
          if (isCollapsed) {
            wrapper.classList.add('sidebar-collapsed');
            toggleButton.classList.add('is-active');
          }

          toggleButton.addEventListener('click', () => {
            const isCurrentlyCollapsed = wrapper.classList.contains('sidebar-collapsed');
            
            if (isCurrentlyCollapsed) {
              wrapper.classList.remove('sidebar-collapsed');
              toggleButton.classList.remove('is-active');
              localStorage.setItem('sidebar-collapsed', 'false');
            } else {
              wrapper.classList.add('sidebar-collapsed');
              toggleButton.classList.add('is-active');
              localStorage.setItem('sidebar-collapsed', 'true');
            }
          });
        }
      });
    </script>
</body>
</html>