                        @if (ViewBag.Planta != null)
                        {
                            <li class="nav-item me-3">
                                <span class="nav-link text-white">
                                    <i class="bi bi-building me-1"></i>
                                    <span id="plantaActual">@ViewBag.Planta</span>
                                </span>
                            </li>
                        }
                        <li class="nav-item">
                            <img src="~/images/brose-logo.png" alt="Brose Logo" style="height: 40px; filter: brightness(0) invert(1);">
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container-fluid px-4">
        <main role="main" class="pb-3 mt-4">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted mt-5">
        <div class="container">
            &copy; 2025 - Brose Onboarding Dashboard - Sistema de Gestión de Onboarding
        </div>
    </footer>
    
    <style>
        .perfil-item {
            transition: all 0.2s ease;
        }
        
        .perfil-item:hover {
            background-color: #FFF5F5 !important;
            padding-left: 1rem !important;
        }
        
        .dropdown-menu {
            border: none;
            max-height: 600px;
            overflow-y: auto;
        }
        
        .dropdown-menu::-webkit-scrollbar {
            width: 6px;
        }
        
        .dropdown-menu::-webkit-scrollbar-track {
            background: #f1f1f1;
            border-radius: 10px;
        }
        
        .dropdown-menu::-webkit-scrollbar-thumb {
            background: #E30613;
            border-radius: 10px;
        }
        
        .dropdown-menu::-webkit-scrollbar-thumb:hover {
            background: #B20510;
        }
    </style>
    
    <script>
        // Cargar perfil guardado al iniciar
        document.addEventListener('DOMContentLoaded', function() {
            const perfilGuardado = localStorage.getItem('perfilDemo');
            if (perfilGuardado) {
                const perfil = JSON.parse(perfilGuardado);
                aplicarPerfilSinNotificacion(perfil);
            }
        });
        
        function cambiarPerfil(nombre, rol, planta, verRH, verLider, verEmpleado, progreso = 0, estado = 'activo') {
            const perfil = {
                nombre: nombre,
                rol: rol,
                planta: planta,
                verRH: verRH,
                verLider: verLider,
                verEmpleado: verEmpleado,
                progreso: progreso,
                estado: estado
            };
            
            // Guardar en localStorage
            localStorage.setItem('perfilDemo', JSON.stringify(perfil));
            
            // Mostrar notificación
            mostrarNotificacion(perfil);
            
            // Redirigir según el rol con parámetro de perfil
            setTimeout(() => {
                if (verRH) {
                    window.location.href = '/RH/Dashboard?perfil=' + encodeURIComponent(nombre);
                } else if (verLider) {
                    window.location.href = '/Lider/Dashboard?perfil=' + encodeURIComponent(nombre);
                } else if (verEmpleado) {
                    window.location.href = '/Empleado/Dashboard?perfil=' + encodeURIComponent(nombre);
                }
            }, 500);
        }
        
        function aplicarPerfilSinNotificacion(perfil) {
            // Actualizar texto del perfil actual
            const perfilActual = document.getElementById('perfilActual');
            if (perfilActual) {
                perfilActual.innerHTML = `<i class="bi bi-person-circle me-1"></i>${perfil.nombre}`;
            }
            
            // Actualizar planta
            const plantaActual = document.getElementById('plantaActual');
            if (plantaActual) {
                plantaActual.textContent = perfil.planta;
            }
            
            // Ocultar/mostrar opciones del menú según el rol usando IDs
            const menuRH = document.getElementById('menu-rh');
            const menuEmpleado = document.getElementById('menu-empleado');
            const menuLider = document.getElementById('menu-lider');
            
            console.log('Aplicando perfil:', perfil);
            console.log('Elementos encontrados:', {menuRH, menuEmpleado, menuLider});
            
            // Ocultar todos primero
            if (menuRH) {
                menuRH.style.display = 'none';
                console.log('Ocultando menu RH');
            }
            
            if (menuEmpleado) {
                menuEmpleado.style.display = 'none';
                console.log('Ocultando menu Empleado');
            }
            
            if (menuLider) {
                menuLider.style.display = 'none';
                console.log('Ocultando menu Lider');
            }
            
            // Mostrar solo los permitidos
            if (perfil.verRH && menuRH) {
                menuRH.style.display = 'block';
                console.log('Mostrando menu RH');
            }
            
            if (perfil.verEmpleado && menuEmpleado) {
                menuEmpleado.style.display = 'block';
                console.log('Mostrando menu Empleado');
            }
            
            if (perfil.verLider && menuLider) {
                menuLider.style.display = 'block';
                console.log('Mostrando menu Lider');
            }
            
            // Interceptar clicks en los menús para mantener el perfil
            const todosLosMenus = document.querySelectorAll('#menu-rh a, #menu-empleado a, #menu-lider a');
            console.log('Menús encontrados para interceptar:', todosLosMenus.length);
            
            todosLosMenus.forEach(menu => {
                menu.addEventListener('click', function(e) {
                    e.preventDefault();
                    const href = this.getAttribute('href');
                    const perfil = JSON.parse(localStorage.getItem('perfilDemo') || '{}');
                    console.log('Click en menú, redirigiendo con perfil:', perfil.nombre);
                    if (perfil.nombre) {
                        window.location.href = href + '?perfil=' + encodeURIComponent(perfil.nombre);
                    } else {
                        window.location.href = href;
                    }
                });
            });
        }
        
        function mostrarNotificacion(perfil) {
            // Crear notificación toast
            const toastHTML = `
                <div class="toast-container position-fixed top-0 end-0 p-3" style="z-index: 9999;">
                    <div class="toast show" role="alert" aria-live="assertive" aria-atomic="true">
                        <div class="toast-header bg-danger text-white">
                            <i class="bi bi-person-check-fill me-2"></i>
                            <strong class="me-auto">Perfil Cambiado</strong>
                            <button type="button" class="btn-close btn-close-white" data-bs-dismiss="toast"></button>
                        </div>
                        <div class="toast-body">
                            <strong>${perfil.nombre}</strong><br>
                            <small class="text-muted">${perfil.rol} - ${perfil.planta}</small>
                        </div>
                    </div>
                </div>
            `;
            
            // Eliminar toasts anteriores
            const toastsAnteriores = document.querySelectorAll('.toast-container');
            toastsAnteriores.forEach(t => t.remove());
            
            // Agregar nuevo toast
            document.body.insertAdjacentHTML('beforeend', toastHTML);
            
            // Auto-ocultar después de 3 segundos
            setTimeout(() => {
                const toast = document.querySelector('.toast-container');
                if (toast) {
                    toast.remove();
                }
            }, 3000);
        }
        
        // Limpiar perfil (volver a modo demo normal)
        function limpiarPerfil() {
            localStorage.removeItem('perfilDemo');
            location.reload();
        }
    </script>
    
    <!-- Bootstrap 5 JS desde CDN -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>

