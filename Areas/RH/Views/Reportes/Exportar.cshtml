@{
    ViewData["Title"] = "Exportar Datos";
}

<div class="container-fluid py-4">
    <!-- Header -->
    <div class="row mb-4">
        <div class="col-12">
            <h2 class="fw-bold mb-1">
                <i class="bi bi-download text-danger me-2"></i>
                Exportar Datos
            </h2>
            <p class="text-muted mb-0">Genera y descarga reportes en diferentes formatos</p>
        </div>
    </div>

    @if (TempData["Success"] != null)
    {
        <div class="row mb-4">
            <div class="col-12">
                <div class="alert alert-success alert-dismissible fade show" role="alert">
                    <i class="bi bi-check-circle-fill me-2"></i>
                    @TempData["Success"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
            </div>
        </div>
    }

    <!-- Tipos de Reportes -->
    <div class="row">
        @foreach (var reporte in ViewBag.TiposReportes)
        {
            <div class="col-md-6 col-lg-4 mb-4">
                <div class="card border-0 shadow-sm h-100 hover-card">
                    <div class="card-body">
                        <div class="d-flex align-items-start mb-3">
                            <div class="flex-shrink-0">
                                <div class="rounded-circle bg-danger bg-opacity-10 p-3">
                                    <i class="bi bi-file-earmark-text text-danger fs-3"></i>
                                </div>
                            </div>
                            <div class="flex-grow-1 ms-3">
                                <h5 class="card-title fw-bold mb-2">@reporte.Nombre</h5>
                                <p class="text-muted small mb-0">@reporte.Descripcion</p>
                            </div>
                        </div>

                        <hr>

                        <div class="mb-3">
                            <label class="form-label small fw-bold text-muted">Formato de Exportación</label>
                            <select class="form-select" id="formato_@reporte.Id">
                                @foreach (var formato in reporte.Formato)
                                {
                                    <option value="@formato">@formato</option>
                                }
                            </select>
                        </div>

                        <div class="d-grid gap-2">
                            <button class="btn btn-danger" onclick="descargarReporte(@reporte.Id)">
                                <i class="bi bi-download me-2"></i>
                                Descargar Reporte
                            </button>
                        </div>

                        <div class="mt-3 text-center">
                            <small class="text-muted">
                                <i class="bi bi-info-circle me-1"></i>
                                Formatos disponibles: @string.Join(", ", reporte.Formato)
                            </small>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>

    <!-- Opciones Avanzadas -->
    <div class="row mt-4">
        <div class="col-12">
            <div class="card border-0 shadow-sm">
                <div class="card-header bg-white border-0 py-3">
                    <h5 class="mb-0 fw-bold">
                        <i class="bi bi-sliders text-danger me-2"></i>
                        Opciones Avanzadas de Exportación
                    </h5>
                </div>
                <div class="card-body">
                    <form id="exportForm">
                        <div class="row">
                            <div class="col-md-4 mb-3">
                                <label class="form-label fw-bold">Rango de Fechas</label>
                                <div class="input-group">
                                    <span class="input-group-text"><i class="bi bi-calendar"></i></span>
                                    <input type="date" class="form-control" id="fechaInicio">
                                    <span class="input-group-text">a</span>
                                    <input type="date" class="form-control" id="fechaFin">
                                </div>
                            </div>

                            <div class="col-md-3 mb-3">
                                <label class="form-label fw-bold">Filtrar por Planta</label>
                                <select class="form-select" id="plantaFiltro">
                                    <option selected>Todas</option>
                                    <option>Planta Aguascalientes</option>
                                    <option>Planta Silao</option>
                                    <option>Planta Puebla</option>
                                    <option>Planta León</option>
                                </select>
                            </div>

                            <div class="col-md-3 mb-3">
                                <label class="form-label fw-bold">Filtrar por Área</label>
                                <select class="form-select" id="areaFiltro">
                                    <option selected>Todas</option>
                                    <option>Producción</option>
                                    <option>Calidad</option>
                                    <option>Ingeniería</option>
                                    <option>Logística</option>
                                    <option>Mantenimiento</option>
                                    <option>RH</option>
                                    <option>Finanzas</option>
                                    <option>Compras</option>
                                </select>
                            </div>

                            <div class="col-md-2 mb-3">
                                <label class="form-label fw-bold">Estado</label>
                                <select class="form-select" id="estadoFiltro">
                                    <option selected>Todos</option>
                                    <option>Activos</option>
                                    <option>En Riesgo</option>
                                    <option>Completados</option>
                                </select>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-12">
                                <div class="form-check form-switch mb-2">
                                    <input class="form-check-input" type="checkbox" id="incluirGraficos" checked>
                                    <label class="form-check-label" for="incluirGraficos">
                                        Incluir gráficos en el reporte
                                    </label>
                                </div>
                                <div class="form-check form-switch mb-2">
                                    <input class="form-check-input" type="checkbox" id="incluirKPIs" checked>
                                    <label class="form-check-label" for="incluirKPIs">
                                        Incluir KPIs detallados
                                    </label>
                                </div>
                                <div class="form-check form-switch mb-2">
                                    <input class="form-check-input" type="checkbox" id="incluirComentarios">
                                    <label class="form-check-label" for="incluirComentarios">
                                        Incluir comentarios y observaciones
                                    </label>
                                </div>
                            </div>
                        </div>

                        <hr class="my-4">

                        <div class="row">
                            <div class="col-12 text-end">
                                <button type="button" class="btn btn-outline-secondary me-2" onclick="limpiarFiltros()">
                                    <i class="bi bi-x-circle me-1"></i>
                                    Limpiar Filtros
                                </button>
                                <button type="button" class="btn btn-danger" onclick="exportarConFiltros()">
                                    <i class="bi bi-download me-1"></i>
                                    Exportar con Filtros
                                </button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <!-- Programación de Reportes -->
    <div class="row mt-4">
        <div class="col-12">
            <div class="card border-0 shadow-sm">
                <div class="card-header bg-white border-0 py-3">
                    <h5 class="mb-0 fw-bold">
                        <i class="bi bi-clock-history text-danger me-2"></i>
                        Programar Reportes Automáticos
                    </h5>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-4 mb-3">
                            <label class="form-label fw-bold">Tipo de Reporte</label>
                            <select class="form-select">
                                <option>Reporte General de Empleados</option>
                                <option>Reporte de Progreso</option>
                                <option>Reporte de Satisfacción</option>
                                <option>Reporte de Riesgos</option>
                            </select>
                        </div>

                        <div class="col-md-3 mb-3">
                            <label class="form-label fw-bold">Frecuencia</label>
                            <select class="form-select">
                                <option>Diario</option>
                                <option selected>Semanal</option>
                                <option>Quincenal</option>
                                <option>Mensual</option>
                            </select>
                        </div>

                        <div class="col-md-3 mb-3">
                            <label class="form-label fw-bold">Formato</label>
                            <select class="form-select">
                                <option>Excel</option>
                                <option selected>PDF</option>
                                <option>CSV</option>
                            </select>
                        </div>

                        <div class="col-md-2 mb-3">
                            <label class="form-label fw-bold">&nbsp;</label>
                            <button class="btn btn-danger w-100">
                                <i class="bi bi-plus-circle me-1"></i>
                                Programar
                            </button>
                        </div>
                    </div>

                    <div class="alert alert-info mb-0 mt-3">
                        <i class="bi bi-info-circle me-2"></i>
                        <strong>Nota:</strong> Los reportes programados se enviarán automáticamente por correo electrónico según la frecuencia configurada.
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .hover-card {
        transition: transform 0.2s, box-shadow 0.2s;
    }

    .hover-card:hover {
        transform: translateY(-5px);
        box-shadow: 0 0.5rem 1rem rgba(0, 0, 0, 0.15) !important;
    }
</style>

<script>
    function descargarReporte(reporteId) {
        const formato = document.getElementById('formato_' + reporteId).value;
        
        // Simular descarga
        const form = document.createElement('form');
        form.method = 'POST';
        form.action = '/RH/Reportes/DescargarReporte';
        
        const inputId = document.createElement('input');
        inputId.type = 'hidden';
        inputId.name = 'reporteId';
        inputId.value = reporteId;
        
        const inputFormato = document.createElement('input');
        inputFormato.type = 'hidden';
        inputFormato.name = 'formato';
        inputFormato.value = formato;
        
        form.appendChild(inputId);
        form.appendChild(inputFormato);
        document.body.appendChild(form);
        form.submit();
    }

    function exportarConFiltros() {
        const fechaInicio = document.getElementById('fechaInicio').value;
        const fechaFin = document.getElementById('fechaFin').value;
        const planta = document.getElementById('plantaFiltro').value;
        const area = document.getElementById('areaFiltro').value;
        const estado = document.getElementById('estadoFiltro').value;

        alert('Exportando con filtros:\n' +
              'Fecha: ' + (fechaInicio || 'N/A') + ' - ' + (fechaFin || 'N/A') + '\n' +
              'Planta: ' + planta + '\n' +
              'Área: ' + area + '\n' +
              'Estado: ' + estado);
    }

    function limpiarFiltros() {
        document.getElementById('exportForm').reset();
    }
</script>
