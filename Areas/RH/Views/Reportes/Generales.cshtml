@{
    ViewData["Title"] = "Reportes Generales";
}

<div class="container-fluid py-4">
    <!-- Header -->
    <div class="row mb-4">
        <div class="col-12">
            <h2 class="fw-bold mb-1">
                <i class="bi bi-file-earmark-bar-graph text-danger me-2"></i>
                Reportes Generales
            </h2>
            <p class="text-muted mb-0">Métricas consolidadas de la organización</p>
        </div>
    </div>

    <!-- KPIs Principales -->
    <div class="row mb-4">
        <div class="col-md-2">
            <div class="card border-0 shadow-sm h-100">
                <div class="card-body text-center">
                    <i class="bi bi-people-fill text-primary fs-1 mb-2"></i>
                    <h3 class="mb-0 fw-bold">@ViewBag.TotalEmpleados</h3>
                    <small class="text-muted">Total Empleados</small>
                </div>
            </div>
        </div>
        <div class="col-md-2">
            <div class="card border-0 shadow-sm h-100">
                <div class="card-body text-center">
                    <i class="bi bi-person-check-fill text-success fs-1 mb-2"></i>
                    <h3 class="mb-0 fw-bold">@ViewBag.EmpleadosActivos</h3>
                    <small class="text-muted">Activos</small>
                </div>
            </div>
        </div>
        <div class="col-md-2">
            <div class="card border-0 shadow-sm h-100">
                <div class="card-body text-center">
                    <i class="bi bi-exclamation-triangle-fill text-warning fs-1 mb-2"></i>
                    <h3 class="mb-0 fw-bold">@ViewBag.EmpleadosEnRiesgo</h3>
                    <small class="text-muted">En Riesgo</small>
                </div>
            </div>
        </div>
        <div class="col-md-2">
            <div class="card border-0 shadow-sm h-100">
                <div class="card-body text-center">
                    <i class="bi bi-graph-up text-info fs-1 mb-2"></i>
                    <h3 class="mb-0 fw-bold">@ViewBag.ProgresoPromedio%</h3>
                    <small class="text-muted">Progreso Prom.</small>
                </div>
            </div>
        </div>
        <div class="col-md-2">
            <div class="card border-0 shadow-sm h-100">
                <div class="card-body text-center">
                    <i class="bi bi-star-fill text-warning fs-1 mb-2"></i>
                    <h3 class="mb-0 fw-bold">@ViewBag.SatisfaccionPromedio</h3>
                    <small class="text-muted">Satisfacción</small>
                </div>
            </div>
        </div>
        <div class="col-md-2">
            <div class="card border-0 shadow-sm h-100">
                <div class="card-body text-center">
                    <i class="bi bi-shield-check text-danger fs-1 mb-2"></i>
                    <h3 class="mb-0 fw-bold">@ViewBag.TasaRetencion%</h3>
                    <small class="text-muted">Retención</small>
                </div>
            </div>
        </div>
    </div>

    <div class="row mb-4">
        <!-- Distribución por Planta -->
        <div class="col-md-6">
            <div class="card border-0 shadow-sm h-100">
                <div class="card-header bg-white border-0 py-3">
                    <h5 class="mb-0 fw-bold">
                        <i class="bi bi-building text-danger me-2"></i>
                        Distribución por Planta
                    </h5>
                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-hover align-middle">
                            <thead class="table-light">
                                <tr>
                                    <th>Planta</th>
                                    <th class="text-center">Empleados</th>
                                    <th class="text-center">Progreso</th>
                                    <th class="text-center">Satisfacción</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var planta in ViewBag.DistribucionPlanta)
                                {
                                    var progresoColor = planta.Progreso >= 87 ? "success" : (planta.Progreso >= 85 ? "info" : "warning");
                                    
                                    <tr>
                                        <td><strong>@planta.Planta</strong></td>
                                        <td class="text-center">
                                            <span class="badge bg-secondary">@planta.Empleados</span>
                                        </td>
                                        <td class="text-center">
                                            <div class="progress" style="height: 20px; width: 100px; margin: 0 auto;">
                                                <div class="progress-bar bg-@progresoColor" role="progressbar" style="width: @planta.Progreso%">
                                                    @planta.Progreso%
                                                </div>
                                            </div>
                                        </td>
                                        <td class="text-center">
                                            <span class="fw-bold">@planta.Satisfaccion</span>
                                            <i class="bi bi-star-fill text-warning ms-1"></i>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>

        <!-- Distribución por Área -->
        <div class="col-md-6">
            <div class="card border-0 shadow-sm h-100">
                <div class="card-header bg-white border-0 py-3">
                    <h5 class="mb-0 fw-bold">
                        <i class="bi bi-diagram-3 text-danger me-2"></i>
                        Distribución por Área
                    </h5>
                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-hover align-middle">
                            <thead class="table-light">
                                <tr>
                                    <th>Área</th>
                                    <th class="text-center">Empleados</th>
                                    <th class="text-end">Porcentaje</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var area in ViewBag.DistribucionArea)
                                {
                                    <tr>
                                        <td>
                                            <span class="badge bg-primary">@area.Area</span>
                                        </td>
                                        <td class="text-center">
                                            <strong>@area.Empleados</strong>
                                        </td>
                                        <td class="text-end">
                                            <div class="d-flex align-items-center justify-content-end">
                                                <div class="progress me-2" style="height: 20px; width: 100px;">
                                                    <div class="progress-bar bg-danger" role="progressbar" style="width: @area.Porcentaje%">
                                                    </div>
                                                </div>
                                                <span class="fw-bold">@area.Porcentaje%</span>
                                            </div>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Tendencia Mensual -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="card border-0 shadow-sm">
                <div class="card-header bg-white border-0 py-3">
                    <h5 class="mb-0 fw-bold">
                        <i class="bi bi-graph-up-arrow text-danger me-2"></i>
                        Tendencia Mensual (Últimos 6 Meses)
                    </h5>
                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-hover align-middle">
                            <thead class="table-light">
                                <tr>
                                    <th>Mes</th>
                                    <th class="text-center">Ingresos</th>
                                    <th class="text-center">Bajas</th>
                                    <th class="text-center">Saldo Neto</th>
                                    <th class="text-center">Progreso Promedio</th>
                                    <th class="text-center">Tendencia</th>
                                </tr>
                            </thead>
                            <tbody>
                                @{
                                    double progresoAnterior = 0;
                                }
                                @foreach (var mes in ViewBag.TendenciaMensual)
                                {
                                    var saldoNeto = mes.Ingresos - mes.Bajas;
                                    var saldoClass = saldoNeto > 0 ? "text-success" : (saldoNeto < 0 ? "text-danger" : "text-muted");
                                    var tendenciaIcon = mes.ProgresoPromedio > progresoAnterior ? "bi-arrow-up-circle-fill text-success" : "bi-arrow-down-circle-fill text-danger";
                                    
                                    <tr>
                                        <td><strong>@mes.Mes</strong></td>
                                        <td class="text-center">
                                            <span class="badge bg-success">+@mes.Ingresos</span>
                                        </td>
                                        <td class="text-center">
                                            <span class="badge bg-danger">-@mes.Bajas</span>
                                        </td>
                                        <td class="text-center">
                                            <span class="fw-bold @saldoClass">@(saldoNeto > 0 ? "+" : "")@saldoNeto</span>
                                        </td>
                                        <td class="text-center">
                                            <div class="progress" style="height: 22px; width: 120px; margin: 0 auto;">
                                                <div class="progress-bar bg-info" role="progressbar" style="width: @mes.ProgresoPromedio%">
                                                    @mes.ProgresoPromedio%
                                                </div>
                                            </div>
                                        </td>
                                        <td class="text-center">
                                            @if (progresoAnterior > 0)
                                            {
                                                <i class="@tendenciaIcon fs-4"></i>
                                            }
                                            else
                                            {
                                                <span class="text-muted">-</span>
                                            }
                                        </td>
                                    </tr>
                                    progresoAnterior = mes.ProgresoPromedio;
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Acciones -->
    <div class="row">
        <div class="col-12 text-end">
            <button class="btn btn-outline-danger me-2">
                <i class="bi bi-file-earmark-excel me-1"></i>
                Exportar a Excel
            </button>
            <button class="btn btn-danger">
                <i class="bi bi-file-earmark-pdf me-1"></i>
                Generar PDF
            </button>
        </div>
    </div>
</div>
