@{
    ViewData["Title"] = "Riesgos de Rotación";
}

<div class="container-fluid py-4">
    <!-- Header -->
    <div class="row mb-4">
        <div class="col-12">
            <h2 class="fw-bold mb-1">
                <i class="bi bi-exclamation-triangle-fill text-danger me-2"></i>
                Riesgos de Rotación
            </h2>
            <p class="text-muted mb-0">Identificación y análisis de empleados en riesgo</p>
        </div>
    </div>

    <!-- Resumen de Riesgos -->
    <div class="row mb-4">
        <div class="col-md-3">
            <div class="card border-0 shadow-sm">
                <div class="card-body">
                    <div class="d-flex align-items-center">
                        <div class="flex-shrink-0">
                            <div class="rounded-circle bg-primary bg-opacity-10 p-3">
                                <i class="bi bi-people-fill text-primary fs-4"></i>
                            </div>
                        </div>
                        <div class="flex-grow-1 ms-3">
                            <h6 class="text-muted small mb-1">Total Empleados</h6>
                            <h3 class="mb-0 fw-bold">@ViewBag.TotalEmpleados</h3>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card border-0 shadow-sm border-danger">
                <div class="card-body">
                    <div class="d-flex align-items-center">
                        <div class="flex-shrink-0">
                            <div class="rounded-circle bg-danger bg-opacity-10 p-3">
                                <i class="bi bi-exclamation-octagon-fill text-danger fs-4"></i>
                            </div>
                        </div>
                        <div class="flex-grow-1 ms-3">
                            <h6 class="text-muted small mb-1">Riesgo Alto</h6>
                            <h3 class="mb-0 fw-bold text-danger">@ViewBag.EmpleadosRiesgoAlto</h3>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card border-0 shadow-sm border-warning">
                <div class="card-body">
                    <div class="d-flex align-items-center">
                        <div class="flex-shrink-0">
                            <div class="rounded-circle bg-warning bg-opacity-10 p-3">
                                <i class="bi bi-exclamation-triangle-fill text-warning fs-4"></i>
                            </div>
                        </div>
                        <div class="flex-grow-1 ms-3">
                            <h6 class="text-muted small mb-1">Riesgo Medio</h6>
                            <h3 class="mb-0 fw-bold text-warning">@ViewBag.EmpleadosRiesgoMedio</h3>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card border-0 shadow-sm">
                <div class="card-body">
                    <div class="d-flex align-items-center">
                        <div class="flex-shrink-0">
                            <div class="rounded-circle bg-success bg-opacity-10 p-3">
                                <i class="bi bi-check-circle-fill text-success fs-4"></i>
                            </div>
                        </div>
                        <div class="flex-grow-1 ms-3">
                            <h6 class="text-muted small mb-1">Riesgo Bajo</h6>
                            <h3 class="mb-0 fw-bold text-success">@ViewBag.EmpleadosRiesgoBajo</h3>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Factores de Riesgo Principales -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="card border-0 shadow-sm">
                <div class="card-header bg-white border-0 py-3">
                    <h5 class="mb-0 fw-bold">
                        <i class="bi bi-bar-chart-fill text-danger me-2"></i>
                        Factores de Riesgo Principales
                    </h5>
                </div>
                <div class="card-body">
                    <div class="row">
                        @foreach (var factor in ViewBag.FactoresRiesgo)
                        {
                            <div class="col-md-6 mb-3">
                                <div class="d-flex align-items-center">
                                    <div class="flex-grow-1">
                                        <div class="d-flex justify-content-between align-items-center mb-1">
                                            <span class="fw-bold">@factor.Factor</span>
                                            <span class="badge bg-danger">@factor.Empleados empleados</span>
                                        </div>
                                        <div class="progress" style="height: 25px;">
                                            <div class="progress-bar bg-danger" role="progressbar" style="width: @factor.Porcentaje%">
                                                @factor.Porcentaje%
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Empleados en Riesgo Alto -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="card border-0 shadow-sm border-danger">
                <div class="card-header bg-danger bg-opacity-10 border-0 py-3">
                    <h5 class="mb-0 fw-bold text-danger">
                        <i class="bi bi-exclamation-octagon-fill me-2"></i>
                        Empleados en Riesgo Alto - Acción Inmediata Requerida
                    </h5>
                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-hover align-middle">
                            <thead class="table-light">
                                <tr>
                                    <th>Empleado</th>
                                    <th>Puesto</th>
                                    <th>Área</th>
                                    <th>Líder</th>
                                    <th class="text-center">Progreso</th>
                                    <th class="text-center">Satisfacción</th>
                                    <th class="text-center">Días</th>
                                    <th>Factores de Riesgo</th>
                                    <th class="text-center">Acciones</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var emp in ViewBag.EmpleadosRiesgoAlto)
                                {
                                    <tr class="table-danger">
                                        <td>
                                            <div class="d-flex align-items-center">
                                                <div class="avatar-circle bg-danger text-white me-2">
                                                    @emp.Nombre.Substring(0, 1)
                                                </div>
                                                <strong>@emp.Nombre</strong>
                                            </div>
                                        </td>
                                        <td>@emp.Puesto</td>
                                        <td><span class="badge bg-primary">@emp.Area</span></td>
                                        <td>@emp.Lider</td>
                                        <td class="text-center">
                                            <div class="progress" style="height: 20px; width: 70px; margin: 0 auto;">
                                                <div class="progress-bar bg-danger" role="progressbar" style="width: @emp.Progreso%">
                                                    @emp.Progreso%
                                                </div>
                                            </div>
                                        </td>
                                        <td class="text-center">
                                            <span class="badge bg-danger">@emp.Satisfaccion</span>
                                        </td>
                                        <td class="text-center">
                                            <span class="badge bg-secondary">@emp.DiasOnboarding</span>
                                        </td>
                                        <td>
                                            @foreach (var factor in emp.FactoresRiesgo)
                                            {
                                                <span class="badge bg-warning text-dark mb-1 me-1">@factor</span>
                                            }
                                        </td>
                                        <td class="text-center">
                                            <a href="/RH/PerfilEmpleado?id=@emp.Id" class="btn btn-sm btn-danger" title="Ver perfil">
                                                <i class="bi bi-eye"></i>
                                            </a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Empleados en Riesgo Medio -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="card border-0 shadow-sm border-warning">
                <div class="card-header bg-warning bg-opacity-10 border-0 py-3">
                    <h5 class="mb-0 fw-bold text-warning">
                        <i class="bi bi-exclamation-triangle-fill me-2"></i>
                        Empleados en Riesgo Medio - Monitoreo Cercano
                    </h5>
                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-hover align-middle">
                            <thead class="table-light">
                                <tr>
                                    <th>Empleado</th>
                                    <th>Puesto</th>
                                    <th>Área</th>
                                    <th>Líder</th>
                                    <th class="text-center">Progreso</th>
                                    <th class="text-center">Satisfacción</th>
                                    <th class="text-center">Días</th>
                                    <th>Factores de Riesgo</th>
                                    <th class="text-center">Acciones</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var emp in ViewBag.EmpleadosRiesgoMedio)
                                {
                                    <tr class="table-warning">
                                        <td>
                                            <div class="d-flex align-items-center">
                                                <div class="avatar-circle bg-warning text-dark me-2">
                                                    @emp.Nombre.Substring(0, 1)
                                                </div>
                                                <strong>@emp.Nombre</strong>
                                            </div>
                                        </td>
                                        <td>@emp.Puesto</td>
                                        <td><span class="badge bg-primary">@emp.Area</span></td>
                                        <td>@emp.Lider</td>
                                        <td class="text-center">
                                            <div class="progress" style="height: 20px; width: 70px; margin: 0 auto;">
                                                <div class="progress-bar bg-warning" role="progressbar" style="width: @emp.Progreso%">
                                                    @emp.Progreso%
                                                </div>
                                            </div>
                                        </td>
                                        <td class="text-center">
                                            <span class="badge bg-warning text-dark">@emp.Satisfaccion</span>
                                        </td>
                                        <td class="text-center">
                                            <span class="badge bg-secondary">@emp.DiasOnboarding</span>
                                        </td>
                                        <td>
                                            @foreach (var factor in emp.FactoresRiesgo)
                                            {
                                                <span class="badge bg-info text-dark mb-1 me-1">@factor</span>
                                            }
                                        </td>
                                        <td class="text-center">
                                            <a href="/RH/PerfilEmpleado?id=@emp.Id" class="btn btn-sm btn-warning" title="Ver perfil">
                                                <i class="bi bi-eye"></i>
                                            </a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Acciones -->
    <div class="row">
        <div class="col-12 text-end">
            <button class="btn btn-outline-danger me-2">
                <i class="bi bi-file-earmark-excel me-1"></i>
                Exportar Reporte
            </button>
            <button class="btn btn-danger">
                <i class="bi bi-bell me-1"></i>
                Enviar Alertas a Líderes
            </button>
        </div>
    </div>
</div>

<style>
    .avatar-circle {
        width: 40px;
        height: 40px;
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        font-weight: bold;
        font-size: 18px;
    }
</style>
