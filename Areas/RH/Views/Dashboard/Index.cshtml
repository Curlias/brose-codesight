@{
    ViewData["Title"] = "Dashboard - Recursos Humanos";
}

<div class="container-fluid">
    <div class="row mb-4">
        <div class="col-12">
            <h2 class="fw-bold text-primary">
                <i class="bi bi-speedometer2 me-2"></i>
                Dashboard de Recursos Humanos
            </h2>
            <p class="text-muted">KPIs y métricas de onboarding</p>
        </div>
    </div>

    <!-- Tarjetas de KPIs principales -->
    <div class="row g-3 mb-4">
        <div class="col-md-3">
            <div class="card bg-primary text-white shadow-sm">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h6 class="card-subtitle mb-2">Empleados Activos</h6>
                            <h2 class="mb-0 fw-bold">@ViewBag.TotalEmpleadosActivos</h2>
                        </div>
                        <i class="bi bi-people-fill" style="font-size: 3rem; opacity: 0.3;"></i>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-md-3">
            <div class="card bg-success text-white shadow-sm">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h6 class="card-subtitle mb-2">Checklist Completado</h6>
                            <h2 class="mb-0 fw-bold">@ViewBag.PorcentajeChecklist%</h2>
                        </div>
                        <i class="bi bi-check-circle-fill" style="font-size: 3rem; opacity: 0.3;"></i>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-md-3">
            <div class="card bg-warning text-white shadow-sm">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h6 class="card-subtitle mb-2">Tareas Pendientes</h6>
                            <h2 class="mb-0 fw-bold">@ViewBag.TareasEntrenamientoPendientes</h2>
                        </div>
                        <i class="bi bi-clock-fill" style="font-size: 3rem; opacity: 0.3;"></i>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-md-3">
            <div class="card bg-info text-white shadow-sm">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h6 class="card-subtitle mb-2">Encuestas Activas</h6>
                            <h2 class="mb-0 fw-bold">@ViewBag.EncuestasActivas</h2>
                        </div>
                        <i class="bi bi-clipboard-check-fill" style="font-size: 3rem; opacity: 0.3;"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="row g-3">
        <!-- Gráfico de Nuevos Ingresos -->
        <div class="col-md-6">
            <div class="card shadow-sm">
                <div class="card-header bg-white">
                    <h5 class="mb-0"><i class="bi bi-graph-up me-2"></i>Nuevos Ingresos por Mes</h5>
                </div>
                <div class="card-body">
                    <div class="chart-container">
                        @{
                            var ingresosList = (List<dynamic>)ViewBag.NuevosIngresosPorMes;
                            var maxIngresosValue = ingresosList.Any() ? ingresosList.Max(x => (int)x.Cantidad) : 1;
                        }
                        @foreach (var item in ingresosList)
                        {
                            var altura = maxIngresosValue > 0 ? (item.Cantidad * 100 / maxIngresosValue) : 0;
                            <div class="chart-bar-wrapper">
                                <div class="chart-bar" style="height: @(altura)%;" 
                                     title="@item.Mes: @item.Cantidad empleados">
                                    <span class="chart-value">@item.Cantidad</span>
                                </div>
                                <span class="chart-label">@item.Mes</span>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>

        <!-- Gráfico de Distribución de Riesgo -->
        <div class="col-md-6">
            <div class="card shadow-sm">
                <div class="card-header bg-white">
                    <h5 class="mb-0"><i class="bi bi-pie-chart me-2"></i>Distribución de Riesgo de Rotación</h5>
                </div>
                <div class="card-body">
                    @{
                        var riesgoList = (List<dynamic>)ViewBag.DistribucionRiesgo;
                        var totalRiesgo = riesgoList.Any() ? riesgoList.Sum(x => (int)x.Cantidad) : 1;
                    }
                    @foreach (var item in riesgoList)
                    {
                        var porcentaje = totalRiesgo > 0 ? (item.Cantidad * 100.0 / totalRiesgo) : 0;
                        var colorClass = item.Nivel == "Bajo" ? "success" : (item.Nivel == "Medio" ? "warning" : "danger");
                        
                        <div class="mb-3">
                            <div class="d-flex justify-content-between mb-1">
                                <span class="fw-bold">@item.Nivel</span>
                                <span>@item.Cantidad empleados (@Math.Round(porcentaje, 1)%)</span>
                            </div>
                            <div class="progress" style="height: 25px;">
                                <div class="progress-bar bg-@colorClass" role="progressbar" 
                                     style="width: @porcentaje%" aria-valuenow="@porcentaje" 
                                     aria-valuemin="0" aria-valuemax="100">
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>

        <!-- Gráfico de Satisfacción -->
        <div class="col-md-12">
            <div class="card shadow-sm">
                <div class="card-header bg-white">
                    <h5 class="mb-0"><i class="bi bi-star-fill me-2"></i>Promedio de Satisfacción por Tipo de Encuesta</h5>
                </div>
                <div class="card-body">
                    <div class="row">
                        @foreach (var item in ViewBag.PromedioSatisfaccion)
                        {
                            var estrellas = Math.Round(item.Promedio, 1);
                            <div class="col-md-3">
                                <div class="text-center p-3 border rounded">
                                    <h6 class="text-muted">@item.TipoEncuesta</h6>
                                    <div class="stars mb-2">
                                        @for (int i = 1; i <= 5; i++)
                                        {
                                            if (i <= estrellas)
                                            {
                                                <i class="bi bi-star-fill text-warning"></i>
                                            }
                                            else
                                            {
                                                <i class="bi bi-star text-warning"></i>
                                            }
                                        }
                                    </div>
                                    <h4 class="mb-0 text-primary">@estrellas.ToString("F1")</h4>
                                </div>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .chart-container {
        display: flex;
        justify-content: space-around;
        align-items: flex-end;
        height: 250px;
        padding: 20px 10px;
        border-bottom: 2px solid #ddd;
    }

    .chart-bar-wrapper {
        display: flex;
        flex-direction: column;
        align-items: center;
        flex: 1;
        margin: 0 5px;
    }

    .chart-bar {
        width: 100%;
        max-width: 60px;
        background: linear-gradient(to top, #0d6efd, #6ea8fe);
        border-radius: 5px 5px 0 0;
        transition: all 0.3s;
        display: flex;
        align-items: flex-start;
        justify-content: center;
        padding-top: 5px;
        min-height: 30px;
    }

    .chart-bar:hover {
        opacity: 0.8;
        transform: translateY(-5px);
    }

    .chart-value {
        color: white;
        font-weight: bold;
        font-size: 0.9rem;
    }

    .chart-label {
        margin-top: 10px;
        font-size: 0.85rem;
        color: #666;
        transform: rotate(-45deg);
        white-space: nowrap;
    }

    .stars {
        font-size: 1.5rem;
    }
</style>
