@{
    ViewData["Title"] = "Dashboard - Recursos Humanos";
    var usuarioRH = ViewBag.UsuarioRH;
}

<style>
    .sidebar-rh {
        position: fixed;
        top: 75px;
        left: 0;
        bottom: 0;
        width: 240px;
        background: #fff;
        overflow-y: auto;
        z-index: 100;
        box-shadow: 2px 0 15px rgba(0,0,0,0.08);
        transition: transform 0.3s ease;
        border-right: 1px solid #E5E5E5;
    }

    .sidebar-rh::-webkit-scrollbar {
        width: 4px;
    }

    .sidebar-rh::-webkit-scrollbar-track {
        background: #f5f5f5;
    }

    .sidebar-rh::-webkit-scrollbar-thumb {
        background: #E30613;
        border-radius: 2px;
    }

    .sidebar-rh .nav-section {
        padding: 10px 0;
        border-bottom: 1px solid #F0F0F0;
    }

    .sidebar-rh .nav-section-title {
        color: #6C757D;
        font-size: 10px;
        font-weight: 700;
        text-transform: uppercase;
        letter-spacing: 0.5px;
        padding: 8px 20px;
        margin-bottom: 5px;
    }

    .sidebar-rh .nav-link {
        color: #1A1A1A;
        padding: 10px 20px;
        display: flex;
        align-items: center;
        text-decoration: none;
        transition: all 0.2s ease;
        border-left: 3px solid transparent;
        font-size: 13px;
        font-weight: 500;
    }

    .sidebar-rh .nav-link:hover {
        background: #FFF5F5;
        color: #E30613;
        border-left-color: #E30613;
    }

    .sidebar-rh .nav-link.active {
        background: #FFF0F0;
        color: #E30613;
        border-left-color: #E30613;
        font-weight: 600;
    }

    .sidebar-rh .nav-link i {
        margin-right: 10px;
        font-size: 15px;
        width: 18px;
        text-align: center;
    }

    .sidebar-rh .badge {
        margin-left: auto;
        font-size: 9px;
        padding: 2px 6px;
    }

    .main-content-rh {
        margin-left: 240px;
        padding: 20px 30px;
        transition: margin-left 0.3s ease;
        min-height: calc(100vh - 75px);
        background: #F8F9FA;
    }

    .toggle-sidebar {
        position: fixed;
        top: 85px;
        left: 240px;
        z-index: 101;
        background: #E30613;
        color: white;
        border: none;
        width: 28px;
        height: 28px;
        border-radius: 0 4px 4px 0;
        cursor: pointer;
        display: flex;
        align-items: center;
        justify-content: center;
        transition: all 0.3s ease;
        box-shadow: 2px 2px 8px rgba(0,0,0,0.1);
    }

    .toggle-sidebar:hover {
        background: #B20510;
    }

    .sidebar-collapsed .sidebar-rh {
        transform: translateX(-240px);
    }

    .sidebar-collapsed .main-content-rh {
        margin-left: 0;
    }

    .sidebar-collapsed .toggle-sidebar {
        left: 0;
    }

    @@media (max-width: 992px) {
        .sidebar-rh {
            transform: translateX(-240px);
        }
        .main-content-rh {
            margin-left: 0;
        }
        .toggle-sidebar {
            left: 0;
        }
        .sidebar-collapsed .sidebar-rh {
            transform: translateX(0);
        }
        .sidebar-collapsed .toggle-sidebar {
            left: 240px;
        }
    }
</style>

<!-- Botón para toggle del sidebar -->
<button class="toggle-sidebar" onclick="toggleSidebar()">
    <i class="bi bi-list"></i>
</button>

<!-- Sidebar de navegación -->
<div class="sidebar-rh">
    <!-- Dashboard Principal -->
    <div class="nav-section">
        <div class="nav-section-title">Dashboard</div>
        <a href="/RH/Dashboard" class="nav-link active">
            <i class="bi bi-house-door"></i>
            <span>Vista General</span>
        </a>
        <a href="#" class="nav-link">
            <i class="bi bi-graph-up-arrow"></i>
            <span>Métricas</span>
        </a>
    </div>

    <!-- Gestión de Empleados -->
    <div class="nav-section">
        <div class="nav-section-title">Empleados</div>
        <a href="/RH/Empleados" class="nav-link">
            <i class="bi bi-people"></i>
            <span>Todos los Empleados</span>
            <span class="badge bg-danger">170</span>
        </a>
        <a href="#" class="nav-link">
            <i class="bi bi-person-plus"></i>
            <span>Nuevos Ingresos</span>
            <span class="badge bg-success">35</span>
        </a>
        <a href="#" class="nav-link">
            <i class="bi bi-arrow-left-right"></i>
            <span>Cambios de Posición</span>
        </a>
    </div>

    <!-- Onboarding -->
    <div class="nav-section">
        <div class="nav-section-title">Onboarding</div>
        <a href="#" class="nav-link">
            <i class="bi bi-list-check"></i>
            <span>Checklists</span>
        </a>
        <a href="#" class="nav-link">
            <i class="bi bi-book"></i>
            <span>Planes de Entrenamiento</span>
        </a>
        <a href="#" class="nav-link">
            <i class="bi bi-clipboard-check"></i>
            <span>Tareas Pendientes</span>
            <span class="badge bg-warning text-dark">32</span>
        </a>
    </div>

    <!-- Evaluación -->
    <div class="nav-section">
        <div class="nav-section-title">Evaluación</div>
        <a href="#" class="nav-link">
            <i class="bi bi-chat-square-quote"></i>
            <span>Encuestas</span>
        </a>
        <a href="#" class="nav-link">
            <i class="bi bi-emoji-smile"></i>
            <span>Satisfacción</span>
        </a>
        <a href="#" class="nav-link">
            <i class="bi bi-star"></i>
            <span>Evaluaciones</span>
        </a>
    </div>

    <!-- Liderazgo -->
    <div class="nav-section">
        <div class="nav-section-title">Liderazgo</div>
        <a href="#" class="nav-link">
            <i class="bi bi-person-badge"></i>
            <span>Gestión de Líderes</span>
        </a>
        <a href="#" class="nav-link">
            <i class="bi bi-trophy"></i>
            <span>Ranking</span>
        </a>
    </div>

    <!-- Reportes -->
    <div class="nav-section">
        <div class="nav-section-title">Reportes</div>
        <a href="#" class="nav-link">
            <i class="bi bi-file-earmark-bar-graph"></i>
            <span>Reportes Generales</span>
        </a>
        <a href="#" class="nav-link">
            <i class="bi bi-exclamation-triangle"></i>
            <span>Riesgos de Rotación</span>
        </a>
        <a href="#" class="nav-link">
            <i class="bi bi-download"></i>
            <span>Exportar Datos</span>
        </a>
    </div>

    <!-- Configuración -->
    <div class="nav-section">
        <div class="nav-section-title">Sistema</div>
        <a href="#" class="nav-link">
            <i class="bi bi-gear"></i>
            <span>Configuración</span>
        </a>
        <a href="#" class="nav-link">
            <i class="bi bi-shield-lock"></i>
            <span>Roles y Permisos</span>
        </a>
    </div>
</div>

<!-- Contenido principal -->
<div class="main-content-rh">
    <!-- Banner superior -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="card bg-danger text-white shadow">
                <div class="card-body p-4">
                    <div class="row align-items-center">
                        <div class="col-md-8">
                            <h2 class="fw-bold mb-2">
                                <i class="bi bi-gear-wide-connected me-2"></i>
                                Panel de Administración - @usuarioRH.Nombre
                            </h2>
                            <p class="mb-0 opacity-75">Gestión integral del proceso de onboarding empresarial</p>
                        </div>
                        <div class="col-md-4 text-end">
                            <div class="text-white">
                                <h5 class="mb-1">@usuarioRH.TotalEmpleados</h5>
                                <small>Empleados Totales</small>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Nuevos Ingresos 2025 -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="card shadow-sm">
                <div class="card-body">
                    <h5 class="card-title fw-bold mb-4">
                        <i class="bi bi-calendar-plus text-primary me-2"></i>
                        NUEVOS INGRESOS 2025
                    </h5>
                    <div class="row g-3 text-center">
                        <div class="col-md-2">
                            <div class="p-3 bg-light rounded">
                                <h2 class="mb-1 text-primary fw-bold">@ViewBag.NuevosIngresos2025.GE</h2>
                                <p class="text-muted small mb-0">GE</p>
                            </div>
                        </div>
                        <div class="col-md-2">
                            <div class="p-3 bg-light rounded">
                                <h2 class="mb-1 text-success fw-bold">@ViewBag.NuevosIngresos2025.GKL</h2>
                                <p class="text-muted small mb-0">GKL</p>
                            </div>
                        </div>
                        <div class="col-md-2">
                            <div class="p-3 bg-light rounded">
                                <h2 class="mb-1 text-info fw-bold">@ViewBag.NuevosIngresos2025.FL</h2>
                                <p class="text-muted small mb-0">FL</p>
                            </div>
                        </div>
                        <div class="col-md-2">
                            <div class="p-3 bg-light rounded">
                                <h2 class="mb-1 text-warning fw-bold">@ViewBag.NuevosIngresos2025.WS</h2>
                                <p class="text-muted small mb-0">WS</p>
                            </div>
                        </div>
                        <div class="col-md-2">
                            <div class="p-3 bg-light rounded">
                                <h2 class="mb-1 text-secondary fw-bold">@ViewBag.NuevosIngresos2025.ATS</h2>
                                <p class="text-muted small mb-0">ATS</p>
                            </div>
                        </div>
                        <div class="col-md-2">
                            <div class="p-3 bg-danger text-white rounded">
                                <h2 class="mb-1 fw-bold">@ViewBag.NuevosIngresos2025.Total</h2>
                                <p class="small mb-0">TOTAL</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Totales por período -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="card shadow-sm">
                <div class="card-body">
                    <h5 class="card-title fw-bold mb-4">
                        <i class="bi bi-table text-primary me-2"></i>
                        TOTALES DE DATOS USUARIO POR PERIODO
                    </h5>
                    <div class="table-responsive">
                        <table class="table table-hover align-middle">
                            <thead class="table-light">
                                <tr>
                                    <th>Tipos de empleados</th>
                                    <th class="text-center">NUEVO INGRESO</th>
                                    <th class="text-center">CAMBIO DE POSICIÓN</th>
                                    <th class="text-center">% SATISFACCIÓN</th>
                                </tr>
                            </thead>
                            <tbody>
                                @if (ViewBag.TiposEmpleados != null)
                                {
                                    foreach (var tipo in ViewBag.TiposEmpleados)
                                    {
                                        <tr>
                                            <td><strong>@tipo.Tipo</strong></td>
                                            <td class="text-center">
                                                <span class="badge bg-primary">@tipo.NuevoIngreso</span>
                                            </td>
                                            <td class="text-center">
                                                <span class="badge bg-info">@tipo.CambioPosicion</span>
                                            </td>
                                            <td class="text-center">
                                                <span class="fw-bold">@tipo.Satisfaccion / 5.0</span>
                                            </td>
                                        </tr>
                                    }
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- SEMÁFORO NETP (New Employee Training Plan) -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="card shadow-sm">
                <div class="card-body">
                    <h5 class="card-title fw-bold mb-4">
                        <i class="bi bi-traffic-light text-primary me-2"></i>
                        SEMÁFORO NETP (New Employee Training Plan)
                    </h5>
                    <div class="row g-4">
                        <!-- Verde: En Tiempo -->
                        <div class="col-md-4">
                            <a href="/RH/Empleados?estado=NETP%20Verde" class="text-decoration-none">
                                <div class="card border-success text-center h-100 shadow-sm hover-shadow">
                                    <div class="card-body py-5">
                                        <i class="bi bi-check-circle-fill display-3 text-success mb-3"></i>
                                        <h1 class="display-1 fw-bold text-success mb-3">6</h1>
                                        <h5 class="fw-bold text-success mb-2">EN TIEMPO</h5>
                                        <p class="text-muted mb-0 small">≥ 70% completado</p>
                                    </div>
                                </div>
                            </a>
                        </div>

                        <!-- Naranja: Precaución -->
                        <div class="col-md-4">
                            <a href="/RH/Empleados?estado=NETP%20Naranja" class="text-decoration-none">
                                <div class="card border-warning text-center h-100 shadow-sm hover-shadow">
                                    <div class="card-body py-5">
                                        <i class="bi bi-exclamation-circle-fill display-3 text-warning mb-3"></i>
                                        <h1 class="display-1 fw-bold text-warning mb-3">4</h1>
                                        <h5 class="fw-bold text-warning mb-2">PRECAUCIÓN</h5>
                                        <p class="text-muted mb-0 small">40% - 69% completado</p>
                                    </div>
                                </div>
                            </a>
                        </div>

                        <!-- Rojo: Rezago -->
                        <div class="col-md-4">
                            <a href="/RH/Empleados?estado=NETP%20Rojo" class="text-decoration-none">
                                <div class="card border-danger text-center h-100 shadow-sm hover-shadow">
                                    <div class="card-body py-5">
                                        <i class="bi bi-x-circle-fill display-3 text-danger mb-3"></i>
                                        <h1 class="display-1 fw-bold text-danger mb-3">3</h1>
                                        <h5 class="fw-bold text-danger mb-2">REZAGO</h5>
                                        <p class="text-muted mb-0 small">&lt; 40% completado</p>
                                    </div>
                                </div>
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Evaluation of the current Onboarding process -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="card shadow-sm">
                <div class="card-body">
                    <h5 class="card-title fw-bold mb-4">
                        <i class="bi bi-diagram-3 text-primary me-2"></i>
                        Evaluation of the current Onboarding process
                    </h5>
                    <div class="row g-3">
                        @if (ViewBag.EvaluacionProceso != null)
                        {
                            foreach (var paso in ViewBag.EvaluacionProceso)
                            {
                                <div class="col-md-2">
                                    <div class="text-center p-3 border rounded h-100">
                                        <div class="rounded-circle bg-primary text-white d-inline-flex align-items-center justify-content-center mb-2" 
                                             style="width: 50px; height: 50px;">
                                            <strong>@paso.Paso</strong>
                                        </div>
                                        <p class="small mb-2">@paso.Nombre</p>
                                        <h5 class="text-success fw-bold mb-0">@paso.Porcentaje%</h5>
                                    </div>
                                </div>
                            }
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Gráficos -->
    <div class="row mb-4">
        <div class="col-md-6">
            <div class="card shadow-sm h-100">
                <div class="card-body">
                    <h5 class="card-title fw-bold mb-4">
                        <i class="bi bi-bar-chart-fill text-success me-2"></i>
                        Cumplimiento por Área
                    </h5>
                    <div style="max-height: 400px; overflow-y: auto;">
                        @if (ViewBag.CumplimientoPorArea != null)
                        {
                            foreach (var area in ViewBag.CumplimientoPorArea)
                            {
                                <div class="mb-3">
                                    <div class="d-flex justify-content-between mb-1">
                                        <span class="small fw-bold">@area.Area</span>
                                        <span class="small">@area.Actual%</span>
                                    </div>
                                    <div class="progress" style="height: 20px;">
                                        <div class="progress-bar bg-success" role="progressbar" 
                                             style="width: @area.Actual%"></div>
                                    </div>
                                </div>
                            }
                        }
                    </div>
                </div>
            </div>
        </div>

        <div class="col-md-6">
            <div class="card shadow-sm h-100">
                <div class="card-body">
                    <h5 class="card-title fw-bold mb-4">
                        <i class="bi bi-emoji-smile-fill text-warning me-2"></i>
                        Satisfacción por Área
                    </h5>
                    <div style="max-height: 400px; overflow-y: auto;">
                        @if (ViewBag.SatisfaccionPorArea != null)
                        {
                            foreach (var area in ViewBag.SatisfaccionPorArea)
                            {
                                var colorClass = area.Satisfaccion >= 4.5 ? "success" : area.Satisfaccion >= 4.0 ? "info" : area.Satisfaccion >= 3.5 ? "warning" : "danger";
                                <div class="mb-3">
                                    <div class="d-flex justify-content-between mb-1">
                                        <span class="small fw-bold">@area.Area</span>
                                        <span class="badge bg-@colorClass">@area.Satisfaccion</span>
                                    </div>
                                    <div class="progress" style="height: 20px;">
                                        <div class="progress-bar bg-@colorClass" role="progressbar" 
                                             style="width: @(area.Satisfaccion * 20)%"></div>
                                    </div>
                                </div>
                            }
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Score y Gamificación -->
    <div class="row mb-4">
        <div class="col-md-6">
            <div class="card shadow-sm h-100">
                <div class="card-body">
                    <h5 class="card-title fw-bold mb-4">
                        <i class="bi bi-trophy-fill text-warning me-2"></i>
                        TOP Líderes
                    </h5>
                    @if (ViewBag.ScorePorLider != null)
                    {
                        foreach (var lider in ViewBag.ScorePorLider)
                        {
                            <div class="d-flex justify-content-between align-items-center mb-3 p-2 border rounded">
                                <div>
                                    <span class="badge bg-warning me-2">#@lider.Posicion</span>
                                    <strong>@lider.Nombre</strong>
                                    <small class="text-muted d-block">@lider.Area</small>
                                </div>
                                <h5 class="mb-0 text-warning">@lider.Score%</h5>
                            </div>
                        }
                    }
                </div>
            </div>
        </div>

        <div class="col-md-6">
            <div class="card shadow-sm h-100">
                <div class="card-body">
                    <h5 class="card-title fw-bold mb-4">
                        <i class="bi bi-exclamation-triangle-fill text-danger me-2"></i>
                        Alertas Activas
                    </h5>
                    @if (ViewBag.AlertasActivas != null)
                    {
                        foreach (var alerta in ViewBag.AlertasActivas)
                        {
                            var prioridadClass = alerta.Prioridad == "Alta" ? "danger" : alerta.Prioridad == "Media" ? "warning" : "info";
                            <div class="mb-3 p-2 border rounded">
                                <div class="d-flex justify-content-between align-items-start">
                                    <div>
                                        <strong>@alerta.Tipo</strong>
                                        <small class="text-muted d-block">Área: @alerta.Area</small>
                                    </div>
                                    <span class="badge bg-@prioridadClass">@alerta.Prioridad</span>
                                </div>
                            </div>
                        }
                    }
                </div>
            </div>
        </div>
    </div>
</div>

<script>
    function toggleSidebar() {
        document.body.classList.toggle('sidebar-collapsed');
        
        // Guardar preferencia en localStorage
        const isCollapsed = document.body.classList.contains('sidebar-collapsed');
        localStorage.setItem('sidebarCollapsed', isCollapsed);
    }

    // Restaurar estado del sidebar al cargar la página
    document.addEventListener('DOMContentLoaded', function() {
        const isCollapsed = localStorage.getItem('sidebarCollapsed') === 'true';
        if (isCollapsed) {
            document.body.classList.add('sidebar-collapsed');
        }
    });

    // Cerrar sidebar en móvil al hacer click en un enlace
    if (window.innerWidth <= 768) {
        document.querySelectorAll('.sidebar-rh .nav-link').forEach(link => {
            link.addEventListener('click', function() {
                document.body.classList.add('sidebar-collapsed');
            });
        });
    }
</script>