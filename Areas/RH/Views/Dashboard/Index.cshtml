@{
    ViewData["Title"] = "Dashboard - Recursos Humanos";
}

<div class="container-fluid">
    <div class="row mb-4">
        <div class="col-12">
            <h2 class="fw-bold text-primary">
                <i class="bi bi-speedometer2 me-2"></i>
                Dashboard de Recursos Humanos
            </h2>
            <p class="text-muted">KPIs y métricas de onboarding</p>
        </div>
    </div>

    <!-- Tarjetas de KPIs principales -->
    <div class="row g-3 mb-4">
        <div class="col-md-3">
            <div class="card bg-primary text-white shadow-sm">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h6 class="card-subtitle mb-2">Empleados Activos</h6>
                            <h2 class="mb-0 fw-bold">@ViewBag.TotalEmpleadosActivos</h2>
                        </div>
                        <i class="bi bi-people-fill" style="font-size: 3rem; opacity: 0.3;"></i>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-md-3">
            <div class="card bg-success text-white shadow-sm">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h6 class="card-subtitle mb-2">Checklist Completado</h6>
                            <h2 class="mb-0 fw-bold">@ViewBag.PorcentajeChecklist%</h2>
                        </div>
                        <i class="bi bi-check-circle-fill" style="font-size: 3rem; opacity: 0.3;"></i>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-md-3">
            <div class="card bg-warning text-white shadow-sm">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h6 class="card-subtitle mb-2">Tareas Pendientes</h6>
                            <h2 class="mb-0 fw-bold">@ViewBag.TareasEntrenamientoPendientes</h2>
                        </div>
                        <i class="bi bi-clock-fill" style="font-size: 3rem; opacity: 0.3;"></i>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-md-3">
            <div class="card bg-info text-white shadow-sm">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h6 class="card-subtitle mb-2">Encuestas Activas</h6>
                            <h2 class="mb-0 fw-bold">@ViewBag.EncuestasActivas</h2>
                        </div>
                        <i class="bi bi-clipboard-check-fill" style="font-size: 3rem; opacity: 0.3;"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="row g-3">
        <!-- Gráfico de Nuevos Ingresos -->
        <div class="col-md-6">
            <div class="card shadow-sm">
                <div class="card-header bg-white">
                    <h5 class="mb-0"><i class="bi bi-graph-up me-2"></i>Nuevos Ingresos por Mes</h5>
                </div>
                <div class="card-body">
                    <div class="chart-container">
                        @{
                            var ingresosList = (List<dynamic>)ViewBag.NuevosIngresosPorMes;
                            var maxIngresosValue = ingresosList.Any() ? ingresosList.Max(x => (int)x.Cantidad) : 1;
                        }
                        @foreach (var item in ingresosList)
                        {
                            var altura = maxIngresosValue > 0 ? (item.Cantidad * 100 / maxIngresosValue) : 0;
                            <div class="chart-bar-wrapper">
                                <div class="chart-bar" style="height: @(altura)%;" 
                                     title="@item.Mes: @item.Cantidad empleados">
                                    <span class="chart-value">@item.Cantidad</span>
                                </div>
                                <span class="chart-label">@item.Mes</span>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>

        <!-- Gráfico de Distribución de Riesgo -->
        <div class="col-md-6">
            <div class="card shadow-sm">
                <div class="card-header bg-white">
                    <h5 class="mb-0"><i class="bi bi-pie-chart me-2"></i>Distribución de Riesgo de Rotación</h5>
                </div>
                <div class="card-body">
                    @{
                        var riesgoList = (List<dynamic>)ViewBag.DistribucionRiesgo;
                        var totalRiesgo = riesgoList.Any() ? riesgoList.Sum(x => (int)x.Cantidad) : 1;
                    }
                    @foreach (var item in riesgoList)
                    {
                        var porcentaje = totalRiesgo > 0 ? (item.Cantidad * 100.0 / totalRiesgo) : 0;
                        var colorClass = item.Nivel == "Bajo" ? "success" : (item.Nivel == "Medio" ? "warning" : "danger");
                        
                        <div class="mb-3">
                            <div class="d-flex justify-content-between mb-1">
                                <span class="fw-bold">@item.Nivel</span>
                                <span>@item.Cantidad empleados (@Math.Round(porcentaje, 1)%)</span>
                            </div>
                            <div class="progress" style="height: 25px;">
                                <div class="progress-bar bg-@colorClass" role="progressbar" 
                                     style="width: @porcentaje%" aria-valuenow="@porcentaje" 
                                     aria-valuemin="0" aria-valuemax="100">
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>

        <!-- Gráfico de Satisfacción -->
        <div class="col-md-12">
            <div class="card shadow-sm">
                <div class="card-header bg-white">
                    <h5 class="mb-0"><i class="bi bi-star-fill me-2"></i>Promedio de Satisfacción por Tipo de Encuesta</h5>
                </div>
                <div class="card-body">
                    <div class="row">
                        @foreach (var item in ViewBag.PromedioSatisfaccion)
                        {
                            var estrellas = Math.Round(item.Promedio, 1);
                            <div class="col-md-3">
                                <div class="text-center p-3 border rounded">
                                    <h6 class="text-muted">@item.TipoEncuesta</h6>
                                    <div class="stars mb-2">
                                        @for (int i = 1; i <= 5; i++)
                                        {
                                            if (i <= estrellas)
                                            {
                                                <i class="bi bi-star-fill text-warning"></i>
                                            }
                                            else
                                            {
                                                <i class="bi bi-star text-warning"></i>
                                            }
                                        }
                                    </div>
                                    <h4 class="mb-0 text-primary">@estrellas.ToString("F1")</h4>
                                </div>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    /* Cards mejoradas */
    .card {
        border: none !important;
        border-radius: 12px !important;
        box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1) !important;
        transition: transform 0.3s ease, box-shadow 0.3s ease;
    }

    .card:hover {
        transform: translateY(-5px);
        box-shadow: 0 5px 20px rgba(0, 0, 0, 0.15) !important;
    }

    .card-header {
        background-color: #fff !important;
        border-bottom: 2px solid #f0f0f0 !important;
        padding: 1.25rem !important;
        font-weight: 600 !important;
        border-radius: 12px 12px 0 0 !important;
    }

    .card-body {
        padding: 1.5rem !important;
    }

    /* KPI Cards con colores de Brose */
    .bg-primary {
        background: linear-gradient(135deg, #E30613 0%, #B20510 100%) !important;
    }

    .bg-success {
        background: linear-gradient(135deg, #6C757D 0%, #495057 100%) !important;
    }

    .bg-warning {
        background: linear-gradient(135deg, #1A1A1A 0%, #000000 100%) !important;
    }

    .bg-info {
        background: linear-gradient(135deg, #DC3545 0%, #E30613 100%) !important;
    }

    /* Gráficos de barras con color Brose */
    .chart-container {
        display: flex;
        justify-content: space-around;
        align-items: flex-end;
        height: 280px;
        padding: 30px 15px 10px;
        background-color: #F5F5F5;
        border-radius: 8px;
        margin: 10px 0;
    }

    .chart-bar-wrapper {
        display: flex;
        flex-direction: column;
        align-items: center;
        flex: 1;
        margin: 0 3px;
        min-width: 40px;
    }

    .chart-bar {
        width: 100%;
        max-width: 50px;
        background: linear-gradient(to top, #E30613, #FF4757);
        border-radius: 8px 8px 0 0;
        transition: all 0.3s ease;
        display: flex;
        align-items: flex-start;
        justify-content: center;
        padding-top: 8px;
        min-height: 40px;
        box-shadow: 0 2px 4px rgba(227, 6, 19, 0.3);
        position: relative;
    }

    .chart-bar:hover {
        opacity: 0.9;
        transform: translateY(-8px);
        box-shadow: 0 4px 12px rgba(227, 6, 19, 0.5);
    }

    .chart-value {
        color: white;
        font-weight: 700;
        font-size: 0.85rem;
        text-shadow: 0 1px 2px rgba(0, 0, 0, 0.3);
    }

    .chart-label {
        margin-top: 12px;
        font-size: 0.75rem;
        color: #1A1A1A;
        font-weight: 500;
        text-align: center;
        max-width: 80px;
    }

    /* Progress bars con colores Brose */
    .progress {
        border-radius: 8px !important;
        background-color: #E9ECEF !important;
        overflow: hidden;
    }

    .progress-bar {
        border-radius: 8px !important;
        transition: width 0.6s ease;
    }

    .progress-bar.bg-success {
        background-color: #6C757D !important;
    }

    .progress-bar.bg-warning {
        background-color: #E30613 !important;
    }

    .progress-bar.bg-danger {
        background-color: #B20510 !important;
    }

    /* Estrellas con color Brose */
    .stars {
        font-size: 1.8rem;
        letter-spacing: 2px;
    }

    .stars i {
        transition: transform 0.2s;
    }

    .stars .text-warning {
        color: #E30613 !important;
    }
    }

    .stars i:hover {
        transform: scale(1.2);
    }

    /* Iconos grandes en cards KPI */
    .card-body i {
        opacity: 0.2;
    }

    /* Títulos */
    h2.fw-bold {
        font-size: 2rem;
        margin-bottom: 0.5rem;
    }

    h5 i, h2 i {
        color: #667eea;
    }

    /* Bordes redondeados generales */
    .rounded {
        border-radius: 8px !important;
    }

    /* Responsive */
    @@media (max-width: 768px) {
        .chart-container {
            height: 200px;
            padding: 20px 10px 5px;
        }

        .chart-bar {
            max-width: 35px;
        }

        .chart-label {
            font-size: 0.65rem;
        }
    }
</style>
