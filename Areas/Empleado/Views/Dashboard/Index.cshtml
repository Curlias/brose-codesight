@{
    ViewData["Title"] = "Mi Dashboard";
    var empleado = ViewBag.Empleado;
}

<div class="container-fluid">
    <!-- Encabezado de Bienvenida -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="card bg-gradient-primary text-white shadow">
                <div class="card-body p-4">
                    <h2 class="mb-2">¡Bienvenido, @empleado.Nombre @empleado.ApellidoPaterno!</h2>
                    <p class="mb-1"><i class="bi bi-briefcase me-2"></i>@empleado.Puesto?.Titulo</p>
                    <p class="mb-1"><i class="bi bi-building me-2"></i>@empleado.Departamento?.Nombre</p>
                    <p class="mb-0"><i class="bi bi-calendar-event me-2"></i>@ViewBag.DiasTrabajados días en Brose</p>
                </div>
            </div>
        </div>
    </div>

    <!-- Tarjetas de Resumen -->
    <div class="row g-3 mb-4">
        <div class="col-md-3">
            <div class="card shadow-sm h-100">
                <div class="card-body text-center">
                    <i class="bi bi-list-check text-primary" style="font-size: 3rem;"></i>
                    <h3 class="mt-3 mb-1">@ViewBag.ChecklistCompletados</h3>
                    <p class="text-muted mb-0">Actividades Completadas</p>
                </div>
            </div>
        </div>

        <div class="col-md-3">
            <div class="card shadow-sm h-100">
                <div class="card-body text-center">
                    <i class="bi bi-book text-success" style="font-size: 3rem;"></i>
                    <h3 class="mt-3 mb-1">@ViewBag.TareasCompletadas</h3>
                    <p class="text-muted mb-0">Tareas de Entrenamiento</p>
                </div>
            </div>
        </div>

        <div class="col-md-3">
            <div class="card shadow-sm h-100">
                <div class="card-body text-center">
                    <i class="bi bi-clipboard-data text-info" style="font-size: 3rem;"></i>
                    <h3 class="mt-3 mb-1">@ViewBag.EncuestasRespondidas</h3>
                    <p class="text-muted mb-0">Encuestas Respondidas</p>
                </div>
            </div>
        </div>

        <div class="col-md-3">
            <div class="card shadow-sm h-100 border-@(empleado.Riesgo?.Nivel == "Bajo" ? "success" : (empleado.Riesgo?.Nivel == "Medio" ? "warning" : "danger"))">
                <div class="card-body text-center">
                    <i class="bi bi-shield-check text-@(empleado.Riesgo?.Nivel == "Bajo" ? "success" : (empleado.Riesgo?.Nivel == "Medio" ? "warning" : "danger"))" 
                       style="font-size: 3rem;"></i>
                    <h3 class="mt-3 mb-1">@(empleado.Riesgo?.Nivel ?? "N/A")</h3>
                    <p class="text-muted mb-0">Riesgo de Rotación</p>
                </div>
            </div>
        </div>
    </div>

    <div class="row g-3">
        <!-- Progreso del Checklist -->
        <div class="col-md-6">
            <div class="card shadow-sm h-100">
                <div class="card-header bg-white">
                    <h5 class="mb-0"><i class="bi bi-check-square me-2"></i>Progreso del Checklist</h5>
                </div>
                <div class="card-body">
                    <div class="mb-3">
                        <div class="d-flex justify-content-between mb-2">
                            <span class="fw-bold">Completado</span>
                            <span>@ViewBag.PorcentajeChecklist%</span>
                        </div>
                        <div class="progress" style="height: 30px;">
                            <div class="progress-bar bg-success progress-bar-striped progress-bar-animated" 
                                 role="progressbar" style="width: @ViewBag.PorcentajeChecklist%" 
                                 aria-valuenow="@ViewBag.PorcentajeChecklist" aria-valuemin="0" aria-valuemax="100">
                                @ViewBag.PorcentajeChecklist%
                            </div>
                        </div>
                    </div>

                    <h6 class="mt-4 mb-3">Actividades Pendientes:</h6>
                    @if (ViewBag.ChecklistPendientes.Count == 0)
                    {
                        <div class="alert alert-success">
                            <i class="bi bi-check-circle me-2"></i>
                            ¡Felicitaciones! Has completado todas tus actividades de checklist.
                        </div>
                    }
                    else
                    {
                        <div class="list-group">
                            @foreach (var item in ViewBag.ChecklistPendientes)
                            {
                                <div class="list-group-item">
                                    <div class="d-flex w-100 justify-content-between">
                                        <h6 class="mb-1">@item.Actividad?.Descripcion</h6>
                                        <small class="text-muted">
                                            <span class="badge bg-secondary">@item.Actividad?.Categoria?.Nombre</span>
                                        </small>
                                    </div>
                                    @if (item.FechaLimite != null)
                                    {
                                        <small class="text-muted">
                                            <i class="bi bi-calendar-event me-1"></i>
                                            Fecha límite: @((DateTime)item.FechaLimite).ToString("dd/MM/yyyy")
                                        </small>
                                    }
                                </div>
                            }
                        </div>
                    }
                </div>
            </div>
        </div>

        <!-- Tareas de Entrenamiento -->
        <div class="col-md-6">
            <div class="card shadow-sm h-100">
                <div class="card-header bg-white">
                    <h5 class="mb-0"><i class="bi bi-book me-2"></i>Tareas de Entrenamiento</h5>
                </div>
                <div class="card-body">
                    @if (ViewBag.TotalTareas == 0)
                    {
                        <div class="alert alert-info">
                            <i class="bi bi-info-circle me-2"></i>
                            No tienes tareas de entrenamiento asignadas por el momento.
                        </div>
                    }
                    else
                    {
                        <div class="mb-3">
                            <p class="mb-2">
                                <strong>Progreso:</strong> 
                                @ViewBag.TareasCompletadas de @ViewBag.TotalTareas completadas
                            </p>
                            <div class="progress" style="height: 20px;">
                                <div class="progress-bar bg-info" role="progressbar" 
                                     style="width: @((ViewBag.TareasCompletadas * 100.0 / ViewBag.TotalTareas))%" 
                                     aria-valuenow="@ViewBag.TareasCompletadas" aria-valuemin="0" aria-valuemax="@ViewBag.TotalTareas">
                                </div>
                            </div>
                        </div>

                        <h6 class="mt-4 mb-3">Tareas Pendientes:</h6>
                        <div class="list-group">
                            @foreach (var tarea in ViewBag.TareasPendientes)
                            {
                                var estadoClass = tarea.IdEstado == 1 ? "secondary" : (tarea.IdEstado == 2 ? "warning" : "success");
                                <div class="list-group-item">
                                    <div class="d-flex w-100 justify-content-between">
                                        <h6 class="mb-1">@tarea.Descripcion</h6>
                                        <span class="badge bg-@estadoClass">@tarea.Estado?.Nombre</span>
                                    </div>
                                    @if (tarea.FechaLimite != null)
                                    {
                                        <small class="text-muted">
                                            <i class="bi bi-calendar-event me-1"></i>
                                            @((DateTime)tarea.FechaLimite).ToString("dd/MM/yyyy")
                                        </small>
                                    }
                                </div>
                            }
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    /* Gradiente del header con colores Brose */
    .bg-gradient-primary {
        background: linear-gradient(135deg, #E30613 0%, #B20510 100%);
    }

    /* Cards mejoradas */
    .card {
        border: none !important;
        border-radius: 12px !important;
        box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1) !important;
        transition: transform 0.3s ease, box-shadow 0.3s ease;
    }

    .card:hover {
        transform: translateY(-5px);
        box-shadow: 0 5px 20px rgba(0, 0, 0, 0.15) !important;
    }

    .card-header {
        background-color: #fff !important;
        border-bottom: 2px solid #E30613 !important;
        padding: 1.25rem !important;
        font-weight: 600 !important;
        border-radius: 12px 12px 0 0 !important;
    }

    .card-body {
        padding: 1.5rem !important;
    }

    /* Progress bars con colores Brose */
    .progress {
        border-radius: 10px !important;
        background-color: #e9ecef !important;
        overflow: hidden;
    }

    .progress-bar {
        border-radius: 10px !important;
        transition: width 0.6s ease;
        background-color: #E30613 !important;
    }

    .progress-bar.bg-success {
        background-color: #6C757D !important;
    }

    .progress-bar.bg-info {
        background-color: #E30613 !important;
    }

    .progress-bar-animated {
        animation: progress-bar-stripes 1s linear infinite;
    }

    /* List group items */
    .list-group-item {
        border: 1px solid #e9ecef !important;
        border-radius: 8px !important;
        margin-bottom: 0.5rem !important;
        transition: all 0.2s ease;
    }

    .list-group-item:hover {
        background-color: #f8f9fa;
        border-color: #E30613 !important;
        transform: translateX(5px);
    }

    /* Badges con colores Brose */
    .badge {
        padding: 0.5rem 0.75rem;
        border-radius: 6px;
        font-weight: 500;
    }

    .badge.bg-secondary {
        background-color: #6C757D !important;
    }

    .badge.bg-warning {
        background-color: #E30613 !important;
    }

    .badge.bg-success {
        background-color: #1A1A1A !important;
    }

    /* Alert boxes */
    .alert {
        border-radius: 10px;
        border: none;
    }

    .alert-success {
        background-color: #F5F5F5;
        color: #1A1A1A;
        border-left: 4px solid #6C757D;
    }

    /* Borders y colores */
    .border-success {
        border-color: #6C757D !important;
        border-width: 2px !important;
    }

    .border-warning {
        border-color: #E30613 !important;
        border-width: 2px !important;
    }

    .border-danger {
        border-color: #B20510 !important;
        border-width: 2px !important;
    }

    /* Iconos de color Brose */
    .text-primary {
        color: #E30613 !important;
    }

    .text-success {
        color: #6C757D !important;
    }

    .text-info {
        color: #E30613 !important;
    }
</style>

