@{
    ViewData["Title"] = "Mi Dashboard";
    var empleado = ViewBag.Empleado;
    
    // Definir imágenes por planta
    var imagenPlanta = "";
    var plantaEmpleado = empleado.Departamento?.Nombre ?? "Desarrollo";
    
    if (plantaEmpleado.Contains("Benito") || plantaEmpleado.Contains("Juarez"))
        imagenPlanta = "brose_benito.jpg";
    else if (plantaEmpleado.Contains("Aeropuerto"))
        imagenPlanta = "brose_aeropuerto.jpg";
    else if (plantaEmpleado.Contains("Marques"))
        imagenPlanta = "brose_elmarques.jpg";
    else if (plantaEmpleado.Contains("Puebla"))
        imagenPlanta = "brose_puebla.jpg";
    else
        imagenPlanta = "brose_benito.jpg"; // Default
}

<div class="container-fluid">
    <!-- Encabezado de Bienvenida con Imagen de Fondo -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="card welcome-card shadow-lg" style="background-image: url('/images/@imagenPlanta'); background-size: cover; background-position: right center; position: relative; overflow: hidden;">
                <div class="welcome-overlay"></div>
                <div class="card-body p-4 position-relative" style="z-index: 2;">
                    <div class="row align-items-center">
                        <div class="col-12">
                            <h2 class="mb-2 text-white fw-bold">¡Bienvenido a la familia, @empleado.Nombre @empleado.ApellidoPaterno!</h2>
                            
                            <div class="row g-2">
                                <div class="col-md-4">
                                    <div class="info-item h-100">
                                        <p class="text-white mb-0 fw-semibold small">
                                            <i class="bi bi-chat-quote me-1"></i>
                                            Comprometido con la excelencia y el aprendizaje continuo
                                        </p>
                                    </div>
                                </div>
                                <div class="col-md-4">
                                    <div class="info-item h-100">
                                        <label class="text-white-50 small mb-1 d-block">Área</label>
                                        <p class="text-white mb-0 fw-semibold small">
                                            <i class="bi bi-diagram-3 me-1"></i>@empleado.Puesto?.Titulo
                                        </p>
                                    </div>
                                </div>
                                <div class="col-md-4">
                                    <div class="info-item h-100">
                                        <p class="text-white mb-0 small">
                                            <i class="bi bi-file-text me-1"></i>
                                            <a href="#" class="text-white text-decoration-underline">Ver descripción del puesto</a>
                                        </p>
                                    </div>
                                </div>
                            </div>
                            
                            <div class="row g-2 mt-1">
                                <div class="col-md-3">
                                    <div class="info-item h-100">
                                        <label class="text-white-50 small mb-1 d-block">Jefe</label>
                                        <p class="text-white mb-0 fw-semibold small">
                                            <i class="bi bi-person-badge me-1"></i>Por asignar
                                        </p>
                                    </div>
                                </div>
                                <div class="col-md-3">
                                    <div class="info-item h-100">
                                        <label class="text-white-50 small mb-1 d-block">Mentor</label>
                                        <p class="text-white mb-0 fw-semibold small">
                                            <i class="bi bi-person-heart me-1"></i>Por asignar
                                        </p>
                                    </div>
                                </div>
                                <div class="col-md-3">
                                    <div class="info-item h-100">
                                        <label class="text-white-50 small mb-1 d-block">Antigüedad</label>
                                        <p class="text-white mb-0 fw-semibold small">
                                            <i class="bi bi-calendar-event me-1"></i>@ViewBag.DiasTrabajados días
                                        </p>
                                    </div>
                                </div>
                                <div class="col-md-3">
                                    <div class="info-item h-100 d-flex flex-column justify-content-center">
                                        <label class="text-white-50 small mb-1 d-block">SKILL</label>
                                        <div class="progress" style="height: 20px; background-color: rgba(255,255,255,0.2);">
                                            <div class="progress-bar bg-white text-dark fw-bold small" role="progressbar" style="width: 0%" aria-valuenow="0" aria-valuemin="0" aria-valuemax="100">
                                                0%
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Tarjetas de Resumen -->
    <div class="row g-3 mb-4">
        <div class="col-md-3">
            <div class="card shadow-sm h-100">
                <div class="card-body text-center">
                    <i class="bi bi-list-check text-primary" style="font-size: 3rem;"></i>
                    <h3 class="mt-3 mb-1">@ViewBag.ChecklistCompletados</h3>
                    <p class="text-muted mb-0">Actividades Completadas</p>
                </div>
            </div>
        </div>

        <div class="col-md-3">
            <div class="card shadow-sm h-100">
                <div class="card-body text-center">
                    <i class="bi bi-book text-success" style="font-size: 3rem;"></i>
                    <h3 class="mt-3 mb-1">@ViewBag.TareasCompletadas</h3>
                    <p class="text-muted mb-0">Tareas de Entrenamiento</p>
                </div>
            </div>
        </div>

        <div class="col-md-3">
            <div class="card shadow-sm h-100">
                <div class="card-body text-center">
                    <i class="bi bi-clipboard-data text-info" style="font-size: 3rem;"></i>
                    <h3 class="mt-3 mb-1">@ViewBag.EncuestasRespondidas</h3>
                    <p class="text-muted mb-0">Encuestas Respondidas</p>
                </div>
            </div>
        </div>

        @* Riesgo de Rotación - Oculto para empleados *@
        @* <div class="col-md-3">
            <div class="card shadow-sm h-100 border-@(empleado.Riesgo?.Nivel == "Bajo" ? "success" : (empleado.Riesgo?.Nivel == "Medio" ? "warning" : "danger"))">
                <div class="card-body text-center">
                    <i class="bi bi-shield-check text-@(empleado.Riesgo?.Nivel == "Bajo" ? "success" : (empleado.Riesgo?.Nivel == "Medio" ? "warning" : "danger"))" 
                       style="font-size: 3rem;"></i>
                    <h3 class="mt-3 mb-1">@(empleado.Riesgo?.Nivel ?? "N/A")</h3>
                    <p class="text-muted mb-0">Riesgo de Rotación</p>
                </div>
            </div>
        </div> *@
    </div>

    <!-- Roadmap de Onboarding - Training & onboarding -->
    <div class="row mb-4 mt-4">
        <div class="col-12">
            <div class="card shadow-sm border-0">
                <div class="card-header" style="background: linear-gradient(135deg, #6C757D 0%, #495057 100%); color: white; border-radius: 12px 12px 0 0 !important;">
                    <h5 class="mb-0"><i class="bi bi-map me-2"></i>Road Map - Training & Onboarding</h5>
                </div>
                <div class="card-body p-4" style="background: linear-gradient(to bottom, #f8f9fa 0%, #e9ecef 100%);">
                    <!-- KPIs del Roadmap -->
                    <div class="d-flex justify-content-end mb-4">
                        <div class="roadmap-kpi-box">
                            <div class="kpi-label">KPI's</div>
                            <div class="kpi-item">Skill matrix <span class="kpi-value">85%</span></div>
                            <div class="kpi-item">CSRs <span class="kpi-value">78%</span></div>
                            <div class="kpi-item">E-Learnings <span class="kpi-value">92%</span></div>
                            <div class="kpi-item">Technologies crites <span class="kpi-value">70%</span></div>
                            <div class="kpi-item">ABC Definition <span class="kpi-value text-success">A-100%</span></div>
                        </div>
                    </div>

                    <!-- Contenedor del Roadmap -->
                    <div class="roadmap-timeline-wrapper">
                        <div class="roadmap-year-badge">2025</div>
                        
                        <!-- Hitos superiores -->
                        <div class="roadmap-row roadmap-top-row">
                            @{ 
                                var hitosSuperiores = new[] { 0, 2, 4, 6 }; // Índices de hitos superiores
                                foreach (var idx in hitosSuperiores)
                                {
                                    if (idx < ViewBag.RoadmapOnboarding.Count)
                                    {
                                        var hito = ViewBag.RoadmapOnboarding[idx];
                                        var estadoColor = "";
                                        var estadoText = "";
                                        var iconColor = "white";
                                        
                                        switch ((string)hito.Estado)
                                        {
                                            case "Completado":
                                                estadoColor = "#28a745";
                                                estadoText = "Compl";
                                                break;
                                            case "En Progreso":
                                                estadoColor = "#6C757D";
                                                estadoText = "En Progreso";
                                                break;
                                            case "Atrasado":
                                                estadoColor = "#E30613";
                                                estadoText = "Atr";
                                                break;
                                            default:
                                                estadoColor = "#adb5bd";
                                                estadoText = "Pendiente";
                                                break;
                                        }
                                        
                                        <div class="roadmap-milestone-card">
                                            <div class="milestone-card-header">
                                                <div class="milestone-title-text">@hito.Nombre</div>
                                                <div class="milestone-responsible-text">@hito.Responsable</div>
                                            </div>
                                            <div class="milestone-icon-wrapper" style="background-color: @estadoColor;">
                                                <i class="@hito.Icono" style="color: @iconColor;"></i>
                                            </div>
                                            @if (!string.IsNullOrEmpty(estadoText))
                                            {
                                                <div class="milestone-status-badge">
                                                    <span class="status-dot" style="background-color: @estadoColor;"></span>
                                                    <span class="status-text">@estadoText</span>
                                                </div>
                                            }
                                        </div>
                                    }
                                }
                            }
                        </div>

                        <!-- Carretera con línea amarilla -->
                        <div class="roadmap-road-line">
                            <div class="road-yellow-line"></div>
                        </div>

                        <!-- Hitos inferiores -->
                        <div class="roadmap-row roadmap-bottom-row">
                            @{ 
                                var hitosInferiores = new[] { 1, 3, 5, 7 }; // Índices de hitos inferiores
                                foreach (var idx in hitosInferiores)
                                {
                                    if (idx < ViewBag.RoadmapOnboarding.Count)
                                    {
                                        var hito = ViewBag.RoadmapOnboarding[idx];
                                        var estadoColor = "";
                                        var estadoText = "";
                                        var iconColor = "white";
                                        
                                        switch ((string)hito.Estado)
                                        {
                                            case "Completado":
                                                estadoColor = "#28a745";
                                                estadoText = "Compl";
                                                break;
                                            case "En Progreso":
                                                estadoColor = "#6C757D";
                                                estadoText = "En Progreso";
                                                break;
                                            case "Atrasado":
                                                estadoColor = "#E30613";
                                                estadoText = "Atr";
                                                break;
                                            default:
                                                estadoColor = "#adb5bd";
                                                estadoText = "Pendiente";
                                                break;
                                        }
                                        
                                        <div class="roadmap-milestone-card">
                                            @if (!string.IsNullOrEmpty(estadoText))
                                            {
                                                <div class="milestone-status-badge">
                                                    <span class="status-dot" style="background-color: @estadoColor;"></span>
                                                    <span class="status-text">@estadoText</span>
                                                </div>
                                            }
                                            <div class="milestone-icon-wrapper" style="background-color: @estadoColor;">
                                                <i class="@hito.Icono" style="color: @iconColor;"></i>
                                            </div>
                                            <div class="milestone-card-header">
                                                <div class="milestone-title-text">@hito.Nombre</div>
                                                <div class="milestone-responsible-text">@hito.Responsable</div>
                                            </div>
                                        </div>
                                    }
                                }
                            }
                        </div>
                    </div>

                    <!-- Leyenda -->
                    <div class="roadmap-legend mt-4">
                        <div class="legend-item">
                            <span class="legend-dot" style="background-color: #28a745;"></span>
                            <span>Completado</span>
                        </div>
                        <div class="legend-item">
                            <span class="legend-dot" style="background-color: #6C757D;"></span>
                            <span>En Progreso</span>
                        </div>
                        <div class="legend-item">
                            <span class="legend-dot" style="background-color: #adb5bd;"></span>
                            <span>Pendiente</span>
                        </div>
                        <div class="legend-item">
                            <span class="legend-dot" style="background-color: #E30613;"></span>
                            <span>Atrasado</span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="row g-3">
        <!-- Progreso del Checklist -->
        <div class="col-md-6">
            <div class="card shadow-sm h-100">
                <div class="card-header bg-white">
                    <h5 class="mb-0"><i class="bi bi-check-square me-2"></i>Progreso del Checklist</h5>
                </div>
                <div class="card-body">
                    <div class="mb-3">
                        <div class="d-flex justify-content-between mb-2">
                            <span class="fw-bold">Completado</span>
                            <span>@ViewBag.PorcentajeChecklist%</span>
                        </div>
                        <div class="progress" style="height: 30px;">
                            <div class="progress-bar bg-success progress-bar-striped progress-bar-animated" 
                                 role="progressbar" style="width: @ViewBag.PorcentajeChecklist%" 
                                 aria-valuenow="@ViewBag.PorcentajeChecklist" aria-valuemin="0" aria-valuemax="100">
                                @ViewBag.PorcentajeChecklist%
                            </div>
                        </div>
                    </div>

                    <h6 class="mt-4 mb-3">Actividades Pendientes:</h6>
                    @if (ViewBag.ChecklistPendientes.Count == 0)
                    {
                        <div class="alert alert-success">
                            <i class="bi bi-check-circle me-2"></i>
                            ¡Felicitaciones! Has completado todas tus actividades de checklist.
                        </div>
                    }
                    else
                    {
                        <div class="list-group">
                            @foreach (var item in ViewBag.ChecklistPendientes)
                            {
                                <div class="list-group-item">
                                    <div class="d-flex w-100 justify-content-between">
                                        <h6 class="mb-1">@item.Actividad?.Descripcion</h6>
                                        <small class="text-muted">
                                            <span class="badge bg-secondary">@item.Actividad?.Categoria?.Nombre</span>
                                        </small>
                                    </div>
                                    @if (item.FechaLimite != null)
                                    {
                                        <small class="text-muted">
                                            <i class="bi bi-calendar-event me-1"></i>
                                            Fecha límite: @((DateTime)item.FechaLimite).ToString("dd/MM/yyyy")
                                        </small>
                                    }
                                </div>
                            }
                        </div>
                    }
                </div>
            </div>
        </div>

        <!-- Tareas de Entrenamiento -->
        <div class="col-md-6">
            <div class="card shadow-sm h-100">
                <div class="card-header bg-white">
                    <h5 class="mb-0"><i class="bi bi-book me-2"></i>Tareas de Entrenamiento</h5>
                </div>
                <div class="card-body">
                    @if (ViewBag.TotalTareas == 0)
                    {
                        <div class="alert alert-info">
                            <i class="bi bi-info-circle me-2"></i>
                            No tienes tareas de entrenamiento asignadas por el momento.
                        </div>
                    }
                    else
                    {
                        <div class="mb-3">
                            <p class="mb-2">
                                <strong>Progreso:</strong> 
                                @ViewBag.TareasCompletadas de @ViewBag.TotalTareas completadas
                            </p>
                            <div class="progress" style="height: 20px;">
                                <div class="progress-bar bg-info" role="progressbar" 
                                     style="width: @((ViewBag.TareasCompletadas * 100.0 / ViewBag.TotalTareas))%" 
                                     aria-valuenow="@ViewBag.TareasCompletadas" aria-valuemin="0" aria-valuemax="@ViewBag.TotalTareas">
                                </div>
                            </div>
                        </div>

                        <h6 class="mt-4 mb-3">Tareas Pendientes:</h6>
                        <div class="list-group">
                            @foreach (var tarea in ViewBag.TareasPendientes)
                            {
                                var estadoClass = tarea.IdEstado == 1 ? "secondary" : (tarea.IdEstado == 2 ? "warning" : "success");
                                <div class="list-group-item">
                                    <div class="d-flex w-100 justify-content-between">
                                        <h6 class="mb-1">@tarea.Descripcion</h6>
                                        <span class="badge bg-@estadoClass">@tarea.Estado?.Nombre</span>
                                    </div>
                                    @if (tarea.FechaLimite != null)
                                    {
                                        <small class="text-muted">
                                            <i class="bi bi-calendar-event me-1"></i>
                                            @((DateTime)tarea.FechaLimite).ToString("dd/MM/yyyy")
                                        </small>
                                    }
                                </div>
                            }
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

